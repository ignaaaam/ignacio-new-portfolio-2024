import "@fontsource-variable/onest";
import "@fontsource-variable/overpass";
import { getLangFromUrl } from '../i18n/utils';
import { AstroSeo } from '@astrolib/seo';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  pageType?: 'website' | 'profile' | 'article';
  articleData?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
    tags?: string[];
  };
  openGraph?: {
    url: string;
    title: string;
    type: string;
    description: string;
    images: Array<{
      url: string;
      width: number;
      height: number;
      alt: string;
      type: string;
    }>;
    site_name: string;
    locale: string;
  };
  twitter?: {
