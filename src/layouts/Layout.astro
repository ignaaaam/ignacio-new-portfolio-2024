        "backend developer",
        "full stack developer",
        "PHP programmer",
        "Laravel developer",
        "Vue.js developer",
        "web development expert",
        "JavaScript programmer",
        "web application developer",
        "TypeScript developer"
      ];
  return roles.map(role => `${role} ${lang === 'es' ? 'en' : 'in'} ${location}`);
});

