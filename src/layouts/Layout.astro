      "busco trabajo desarrollador web",
      "programador PHP Barcelona",
      "desarrollador Laravel disponible"
    ].join(", ")
  : [
      // CV/Portfolio specific keywords  
      "web developer resume",
      "full stack developer portfolio",
      "hire PHP developer",
      "hire Laravel developer",
      "web developer available for hire",
      "freelance developer Barcelona Spain",
      // Generic keywords
      "freelance web developer",
      "professional web development",
      "Laravel expert Spain",
      "freelance PHP developer",
      "web application development",
      "senior full stack developer",
      "Vue.js and Laravel expert",
      "modern JavaScript developer",
      "TypeScript specialist",
      "TailwindCSS developer",
