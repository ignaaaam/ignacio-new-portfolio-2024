      "Laravel and Vue.js development",
      "modern PHP applications",
      "full stack JavaScript development",
      "LAMP stack expert",
      "Node.js and Express development",
      // Project types
      "e-commerce development",
      "enterprise web applications",
      "REST API development",
      "high-performance websites",
      "scalable web applications",
      // Location and tech combinations
      ...roleKeywords,
      ...techKeywords,
      // Remote specific
      "remote web developer Spain",
      "remote Laravel developer",
      "online web development services",
      // Hiring keywords
      "looking for web developer job",
      "PHP developer Barcelona",
      "Laravel developer available"
    ].join(", ");

// Current page path for breadcrumbs
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === '/' || currentPath === '/en' || currentPath === '/en/';
const isBlogPage = currentPath.includes('/blog');
