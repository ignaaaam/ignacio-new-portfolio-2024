---
import { getLangFromUrl } from "../i18n/utils";
import SpanishFlag from "./icons/SpanishFlag.astro";
import EnglishFlag from "./icons/EnglishFlag.astro";

const lang = getLangFromUrl(Astro.url);
interface Props {
  class?: string;
  spanishUrl?: string;
  englishUrl?: string;
}
const { class: className = "", spanishUrl = "/", englishUrl = "/en" } = Astro.props as Props;
---

<div class={`relative inline-block text-left ${className}`}>
  <!-- Dropdown Button -->
  <button
    id="language-dropdown-button"
    type="button"
    class="header-button header-button-secondary text-gray-900 dark:text-gray-100"
    aria-expanded="false"
    aria-haspopup="true"
    aria-label="Select language"
  >
    <div class="flex items-center gap-2">
      {lang === "es" ? <SpanishFlag /> : <EnglishFlag />}
      <span class="hidden sm:inline text-sm font-medium">
        {lang === "es" ? "Español" : "English"}
      </span>
      <!-- Dropdown Arrow -->
      <svg
        id="language-dropdown-arrow"
        class="w-4 h-4 transition-transform duration-200 flex-shrink-0"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 9l-7 7-7-7"
        ></path>
      </svg>
    </div>
  </button>

  <!-- Dropdown Menu -->
  <div
    id="language-dropdown-menu"
    class="absolute right-0 mt-2 w-48 sm:w-56 origin-top-right bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-600 opacity-0 invisible scale-95 transition-all duration-200 z-50"
    role="menu"
    aria-orientation="vertical"
    aria-labelledby="language-dropdown-button"
  >
    <div
      class="py-1"
      role="none"
    >
      <!-- Spanish Option -->
      <a
        href={spanishUrl}
        data-astro-reload
        class="flex items-center gap-3 px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-white transition-colors duration-150 cursor-pointer"
        role="menuitem"
        tabindex="-1"
      >
        <SpanishFlag />
        <div class="flex flex-col">
          <span class="font-medium">Español</span>
          <span class="text-xs text-gray-600 dark:text-gray-400">Spanish</span>
        </div>
      </a>

      <!-- English Option -->
      <a
        href={englishUrl}
        data-astro-reload
        class="flex items-center gap-3 px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-white transition-colors duration-150 cursor-pointer"
        role="menuitem"
        tabindex="-1"
      >
        <EnglishFlag />
        <div class="flex flex-col">
          <span class="font-medium">English</span>
          <span class="text-xs text-gray-600 dark:text-gray-400">Inglés</span>
        </div>
      </a>
    </div>
  </div>
</div>

<style>
  /* Garantizar botón de idioma en dark mode como en la imagen: fondo oscuro, borde claro, texto/iconos blancos */
  :global(.dark) #language-dropdown-button {
    background-color: rgba(31, 41, 55, 0.95);
    color: rgb(243, 244, 246);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow:
      0 1px 3px 0 rgba(0, 0, 0, 0.3),
      0 0 0 1px rgba(255, 255, 255, 0.06);
  }

  :global(.dark) #language-dropdown-button span,
  :global(.dark) #language-dropdown-button svg {
    color: inherit;
    opacity: 1;
  }

  :global(.dark) #language-dropdown-button:hover {
    background-color: rgba(55, 65, 81, 0.98);
    color: rgb(96, 165, 250);
    border: 1px solid rgba(96, 165, 250, 0.45);
  }
</style>

<script>
  class LanguageDropdown {
    button: HTMLButtonElement | null;
    menu: HTMLElement | null;
    arrow: SVGSVGElement | null;
    isOpen: boolean;
    isInitialized: boolean;
    cleanupFns: Array<() => void>;

    constructor() {
      this.button = null;
      this.menu = null;
      this.arrow = null;
      this.isOpen = false;
      this.isInitialized = false;
      this.cleanupFns = [];

      this.init();
    }

    init(): void {
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", () => this.setup(), { once: true });
      } else {
        this.setup();
      }
    }

    destroy(): void {
      this.cleanupFns.forEach((cleanup) => cleanup());
      this.cleanupFns = [];
      this.isInitialized = false;
      this.isOpen = false;
    }

    setup(): void {
      this.destroy();

      this.button = document.getElementById("language-dropdown-button") as HTMLButtonElement | null;
      this.menu = document.getElementById("language-dropdown-menu");
      this.arrow = document.querySelector<SVGSVGElement>("#language-dropdown-arrow");

      if (!this.button || !this.menu) {
        return;
      }

      const onButtonClick = (e: MouseEvent) => this.toggleDropdown(e);
      const onButtonKeydown = (e: KeyboardEvent) => this.handleKeydown(e);
      const onDocClick = (e: MouseEvent) => this.handleOutsideClick(e);
      const onDocKeydown = (e: KeyboardEvent) => {
        if (e.key === "Escape" && this.isOpen) {
          this.closeDropdown(true);
        }
      };

      this.button.addEventListener("click", onButtonClick);
      this.button.addEventListener("keydown", onButtonKeydown);
      document.addEventListener("click", onDocClick);
      document.addEventListener("keydown", onDocKeydown);

      this.cleanupFns.push(() => this.button?.removeEventListener("click", onButtonClick));
      this.cleanupFns.push(() => this.button?.removeEventListener("keydown", onButtonKeydown));
      this.cleanupFns.push(() => document.removeEventListener("click", onDocClick));
      this.cleanupFns.push(() => document.removeEventListener("keydown", onDocKeydown));

      this.isInitialized = true;
    }

    toggleDropdown(e: MouseEvent): void {
      e.preventDefault();
      e.stopPropagation();

      if (this.isOpen) {
        this.closeDropdown();
      } else {
        this.openDropdown();
      }
    }

    openDropdown(): void {
      if (!this.menu) return;
      this.isOpen = true;
      this.menu.classList.remove("opacity-0", "invisible", "scale-95");
      this.menu.classList.add("opacity-100", "visible", "scale-100");
      this.arrow?.classList.add("rotate-180");
      this.button?.setAttribute("aria-expanded", "true");

      const firstItem = this.menu.querySelector<HTMLElement>('[role="menuitem"]');
      if (firstItem) {
        setTimeout(() => firstItem.focus(), 100);
      }
    }

    closeDropdown(returnFocus = false): void {
      if (!this.menu) return;
      this.isOpen = false;
      this.menu.classList.add("opacity-0", "invisible", "scale-95");
      this.menu.classList.remove("opacity-100", "visible", "scale-100");
      this.arrow?.classList.remove("rotate-180");
      this.button?.setAttribute("aria-expanded", "false");

      if (returnFocus) {
        this.button?.focus();
      }
    }

    handleKeydown(e: KeyboardEvent): void {
      if (!this.isOpen || !this.menu) return;

      const menuItems = Array.from(this.menu.querySelectorAll<HTMLElement>('[role="menuitem"]'));
      if (menuItems.length === 0) return;
      const currentIndex = menuItems.findIndex((item) => item === document.activeElement);

      switch (e.key) {
        case "ArrowDown":
          e.preventDefault();
          const nextIndex = (currentIndex + 1) % menuItems.length;
          menuItems[nextIndex]?.focus();
          break;
        case "ArrowUp":
          e.preventDefault();
          const prevIndex = currentIndex <= 0 ? menuItems.length - 1 : currentIndex - 1;
          menuItems[prevIndex]?.focus();
          break;
        case "Enter":
        case " ":
          e.preventDefault();
          if (document.activeElement instanceof HTMLElement) {
            document.activeElement.click();
          }
          break;
      }
    }

    handleOutsideClick(e: MouseEvent): void {
      const target = e.target;
      if (!(target instanceof Node)) return;
      if (!this.button?.contains(target) && !this.menu?.contains(target)) {
        this.closeDropdown();
      }
    }
  }

  // Initialize language dropdown
  const languageDropdown = new LanguageDropdown();

  // Re-initialize on Astro page transitions
  document.addEventListener("astro:after-swap", () => {
    languageDropdown.init();
  });
</script>
