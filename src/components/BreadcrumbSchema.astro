---
interface BreadcrumbItem {
  name: string;
  item: string;
}

interface Props {
  items: BreadcrumbItem[];
}

---

<script type="application/ld+json" is:inline>
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://www.ignathedev.com"
    },
    ...(items?.map((item, index) => ({
      "@type": "ListItem",
      "position": index + 2,
      "name": item.name,
      "item": item.item
    })) || [])
  ]
}
</script> 