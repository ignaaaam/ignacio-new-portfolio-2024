---
import SpanishFlag from "./icons/SpanishFlag.astro";
import EnglishFlag from "./icons/EnglishFlag.astro";

export interface Props {
  isEnglish?: boolean;
  pathname: string;
  spanishUrl?: string;
  englishUrl?: string;
}

const { isEnglish = false, pathname, spanishUrl = "/", englishUrl = "/en" } = Astro.props;
const lang = isEnglish ? "en" : "es";

const homeUrl = isEnglish ? "/en" : "/";
const blogUrl = isEnglish ? "/en/blog" : "/blog";

const navItems = isEnglish
  ? [
      { href: "#services", label: "Services" },
      { href: "#experience", label: "Experience" },
      { href: "#projects", label: "Projects" },
      { href: "#contact", label: "Contact" },
    ]
  : [
      { href: "#services", label: "Servicios" },
      { href: "#experience", label: "Experiencia" },
      { href: "#projects", label: "Proyectos" },
      { href: "#contact", label: "Contacto" },
    ];

const homeLabel = isEnglish ? "Home" : "Inicio";
const blogLabel = "Blog";
const contactLabel = isEnglish ? "Contact" : "Contacto";
const isHomePage = pathname === homeUrl;
