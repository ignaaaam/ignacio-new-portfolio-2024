<script>
  // Mobile Language Dropdown
  class MobileLanguageDropdown {
    button: HTMLButtonElement | null;
    menu: HTMLElement | null;
    arrow: SVGSVGElement | null;
    isOpen: boolean;
    cleanupFns: Array<() => void>;

    constructor() {
      this.button = null;
      this.menu = null;
      this.arrow = null;
      this.isOpen = false;
      this.cleanupFns = [];
      this.init();
    }

    init(): void {
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", () => this.setup(), { once: true });
      } else {
        this.setup();
      }
    }

    destroy(): void {
      this.cleanupFns.forEach((cleanup) => cleanup());
      this.cleanupFns = [];
      this.isOpen = false;
    }

    setup(): void {
      this.destroy();

      this.button = document.getElementById("mobile-language-button") as HTMLButtonElement | null;
      this.menu = document.getElementById("mobile-language-menu");
      this.arrow = document.querySelector<SVGSVGElement>("#mobile-language-arrow");

      if (!this.button || !this.menu) return;

      const onButtonClick = (e: MouseEvent) => this.toggleDropdown(e);
      const onDocClick = (e: MouseEvent) => this.handleOutsideClick(e);
      const onDocKeydown = (e: KeyboardEvent) => {
        if (e.key === "Escape" && this.isOpen) {
          this.closeDropdown(true);
        }
      };

      this.button.addEventListener("click", onButtonClick);
      document.addEventListener("click", onDocClick);
      document.addEventListener("keydown", onDocKeydown);

      this.cleanupFns.push(() => this.button?.removeEventListener("click", onButtonClick));
      this.cleanupFns.push(() => document.removeEventListener("click", onDocClick));
      this.cleanupFns.push(() => document.removeEventListener("keydown", onDocKeydown));
    }

    toggleDropdown(e: MouseEvent): void {
      e.preventDefault();
      e.stopPropagation();

      if (this.isOpen) {
        this.closeDropdown();
      } else {
        this.openDropdown();
      }
    }

    openDropdown(): void {
      if (!this.menu) return;
      this.isOpen = true;
      this.menu.classList.remove("mobile-language-menu-hidden");
      this.menu.classList.add("mobile-language-menu-visible");
      this.arrow?.classList.add("rotate-180");
      this.button?.setAttribute("aria-expanded", "true");
    }

    closeDropdown(returnFocus = false): void {
      if (!this.menu) return;
      this.isOpen = false;
      this.menu.classList.add("mobile-language-menu-hidden");
      this.menu.classList.remove("mobile-language-menu-visible");
      this.arrow?.classList.remove("rotate-180");
      this.button?.setAttribute("aria-expanded", "false");
      if (returnFocus) this.button?.focus();
    }

    handleOutsideClick(e: MouseEvent): void {
      const target = e.target;
      if (!(target instanceof Node)) return;
      if (!this.button?.contains(target) && !this.menu?.contains(target)) {
        this.closeDropdown();
      }
    }
  }

  // Mobile Navigation
  function initMobileNav() {
    const menuButton = document.getElementById("mobile-menu-button") as HTMLButtonElement | null;
    const closeButton = document.getElementById("mobile-menu-close") as HTMLButtonElement | null;
    const menu = document.getElementById("mobile-menu");
    const line1 = document.getElementById("hamburger-line-1") as HTMLElement | null;
    const line2 = document.getElementById("hamburger-line-2") as HTMLElement | null;
    const line3 = document.getElementById("hamburger-line-3") as HTMLElement | null;
    const navLinks = document.querySelectorAll<HTMLElement>(".mobile-nav-link");

    if (!menuButton || !menu) return;
    if (menuButton.dataset.navInitialized === "true") return;
    menuButton.dataset.navInitialized = "true";

    let scrollPosition = 0;

    function openMenu() {
      scrollPosition = window.pageYOffset || document.documentElement.scrollTop;
      document.body.style.position = "fixed";
      document.body.style.top = `-${scrollPosition}px`;
      document.body.style.width = "100%";
      document.body.style.overflow = "hidden";

      menu.classList.remove("mobile-menu-hidden");
      menu.classList.add("mobile-menu-visible");
      menuButton.setAttribute("aria-expanded", "true");

      if (line1 && line2 && line3) {
        line1.style.transform = "rotate(45deg) translate(6px, 6px)";
        line2.style.opacity = "0";
        line3.style.transform = "rotate(-45deg) translate(6px, -6px)";
      }

    navLinks.forEach((link, index) => {
      setTimeout(() => {
          link.style.opacity = "1";
          link.style.transform = "translateY(0)";
        }, index * 100);
      });
    }

    function closeMenu() {
      document.body.style.position = "";
      document.body.style.top = "";
      document.body.style.width = "";
      document.body.style.overflow = "";
      window.scrollTo(0, scrollPosition);

      menu.classList.add("mobile-menu-hidden");
      menu.classList.remove("mobile-menu-visible");
      menuButton.setAttribute("aria-expanded", "false");

      if (line1 && line2 && line3) {
        line1.style.transform = "none";
        line2.style.opacity = "1";
        line3.style.transform = "none";
      }

      navLinks.forEach((link) => {
        link.style.opacity = "0";
        link.style.transform = "translateY(20px)";
      });
    }

    navLinks.forEach((link) => {
      link.style.opacity = "0";
      link.style.transform = "translateY(20px)";
      link.style.transition = "opacity 0.3s ease, transform 0.3s ease";
    });

    menuButton.addEventListener("click", openMenu);
    closeButton?.addEventListener("click", closeMenu);

    navLinks.forEach((link) => {
      link.addEventListener("click", closeMenu);
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && menu.classList.contains("mobile-menu-visible")) {
        closeMenu();
      }
    });
  }

  // Initialize everything
  document.addEventListener("DOMContentLoaded", () => {
    initMobileNav();
    new MobileLanguageDropdown();
  });

  document.addEventListener("astro:page-load", () => {
    initMobileNav();
    new MobileLanguageDropdown();
  });
</script>

<style>
