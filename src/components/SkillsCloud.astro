---
import translations from '../i18n/translations.json';

interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = translations[lang];
---

<div class="mt-12 pt-16 relative">
  <!-- Visual separator at the top of the section -->
  <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-purple-500 to-transparent rounded-full opacity-60"></div>
  
  <h3 class="text-3xl font-bold mb-8 text-center bg-gradient-to-r from-purple-400 to-yellow-200 bg-clip-text text-transparent">
    {t.skillsTitle}
  </h3>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Backend Card -->
    <div class="group relative p-6 bg-gradient-to-br from-purple-900/50 to-blue-900/50 rounded-xl border border-purple-400/20 hover:border-purple-300/40 transition-all duration-300 hover:shadow-[0_0_30px_-5px_rgba(109,40,217,0.3)]">
      <div class="absolute inset-0 bg-gradient-to-r from-purple-500/10 to-transparent opacity-20 group-hover:opacity-30 transition-opacity"></div>
      <h4 class="text-xl font-bold mb-4 flex items-center gap-2 text-purple-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M11 16h.01"></path>
        </svg>
        {t.backendTitle}
      </h4>
      <div class="flex flex-wrap gap-3">
        {t.backendSkills.map(skill => (
          <span class="px-3 py-1 text-sm bg-purple-900/50 text-purple-300 rounded-full border border-purple-400/30 hover:bg-purple-800/50 transition-colors">
            {skill}
          </span>
        ))}
      </div>
    </div>

    <!-- Frontend Card -->
    <div class="group relative p-6 bg-gradient-to-br from-blue-900/50 to-green-900/50 rounded-xl border border-blue-400/20 hover:border-blue-300/40 transition-all duration-300 hover:shadow-[0_0_30px_-5px_rgba(59,130,246,0.3)]">
      <div class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-transparent opacity-20 group-hover:opacity-30 transition-opacity"></div>
      <h4 class="text-xl font-bold mb-4 flex items-center gap-2 text-blue-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        {t.frontendTitle}
      </h4>
      <div class="flex flex-wrap gap-3">
        {t.frontendSkills.map(skill => (
          <span class="px-3 py-1 text-sm bg-green-900/50 text-green-300 rounded-full border border-green-400/30 hover:bg-green-800/50 transition-colors">
            {skill}
          </span>
        ))}
      </div>
    </div>

    <!-- DevOps Card -->
    <div class="group relative p-6 bg-gradient-to-br from-green-900/50 to-purple-900/50 rounded-xl border border-green-400/20 hover:border-green-300/40 transition-all duration-300 hover:shadow-[0_0_30px_-5px_rgba(34,197,94,0.3)]">
      <div class="absolute inset-0 bg-gradient-to-r from-green-500/10 to-transparent opacity-20 group-hover:opacity-30 transition-opacity"></div>
      <h4 class="text-xl font-bold mb-4 flex items-center gap-2 text-green-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        {t.devopsTitle}
      </h4>
      <div class="flex flex-wrap gap-3">
        {t.devopsSkills.map(skill => (
          <span class="px-3 py-1 text-sm bg-red-900/50 text-red-300 rounded-full border border-red-400/30 hover:bg-red-800/50 transition-colors">
            {skill}
          </span>
        ))}
      </div>
    </div>
  </div>
</div> 