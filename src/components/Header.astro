---
import Dropdown from "./Dropdown.astro";
const pathname = Astro.url.pathname;
---

<header
  class={`flex flex-wrap items-center w-full py-5 mx-auto lg:gap-x-10 md:gap-x-4 px-4 lg:gap-y-4 md:gap-y-4 ${pathname !== "/" ? "justify-between" : "justify-center"}`}
>
  <div
    class={`flex items-center lg:flex-row gap-x-4 ${pathname !== "/" ? "order-1 flex-row lg:flex-row" : "flex-col"}`}
  >
    <img
      class="flex self-center rounded-full size-8 md:size-12"
      src="/img/profile_picture.jpg"
      alt="ignathedev photo"
    />
    <nav
      class={`flex flex-row text-sm lg:text-base flex-wrap items-center justify-center gap-4 xl:gap-y-0 opacity-80 mt-4 lg:mt-0 ${pathname !== "/" ? "mt-0" : "mt-4"}`}
    >
      {
        pathname !== "/" ? 
          <a
            class="bg-transparent transition rounded-lg hover:bg-[rgba(120,119,198,0.3)] px-2 py-1 lg:py-2 lg:px-4"
            href="/"
          >
            Inicio
          </a>
         : 
            <a
              class="bg-transparent transition rounded-lg hover:bg-[rgba(120,119,198,0.3)] px-2 py-1 lg:py-2 lg:px-4"
              href="/"
            >
              Inicio
            </a>
            <a
              class="bg-transparent transition rounded-lg hover:bg-[rgba(120,119,198,0.3)] px-2 py-1 lg:py-2 lg:px-4"
              href="#about"
            >
              Sobre mí
            </a>
            <a
              class="bg-transparent transition rounded-lg hover:bg-[rgba(120,119,198,0.3)] px-2 py-1 lg:py-2 lg:px-4"
              href="#landingPage"
            >
              Crea tu página web
            </a>
            <a
              class="bg-transparent transition rounded-lg hover:bg-[rgba(120,119,198,0.3)] px-2 py-1 lg:py-2 lg:px-4"
              href="#experience"
            >
              Experiencia
            </a>
            <a
              class="bg-transparent transition rounded-lg hover:bg-[rgba(120,119,198,0.3)] px-2 py-1 lg:py-2 lg:px-4"
              href="#certifications"
            >
              Certificaciones
            </a>
            <a
              class="bg-transparent transition rounded-lg hover:bg-[rgba(120,119,198,0.3)] px-2 py-1 lg:py-2 lg:px-4"
              href="#projects"
            >
              Proyectos
            </a>
            <a
              class="bg-transparent transition rounded-lg hover:bg-[rgba(120,119,198,0.3)] px-2 py-1 lg:py-2 lg:px-4"
              href="#landingPage"
            >
              Contacto
            </a>
      }
    </nav>
  </div>
  <div
    class={`flex items-center justify-center gap-x-2 lg:mt-0 mt-4 ${pathname !== "/" ? "mt-0 order-2 flex-row lg:flex-row" : "mt-4"}`}
  >
    <Dropdown class="flex order-1" />
    <a
      class="bg-white text-black transition rounded-lg hover:text-white hover:bg-[rgba(120,119,198,0.5)] px-4 py-2 lg:py-2 lg:px-4 order-2 text-sm lg:text-base"
      href="/blog"
      rel="noopener noreferrer"
      >Blog</a
    >
  </div>
</header>
