---
import Dropdown from "./Dropdown.astro";
import ThemeToggle from "./ThemeToggle.astro";
import MobileNav from "./MobileNav.astro";
const pathname = Astro.url.pathname;
---

<header
  class={`flex items-center justify-between w-full py-3 lg:py-4 mx-auto px-4 lg:px-8 bg-white/90 dark:bg-gray-900/90 backdrop-blur-md border-b border-gray-200/50 dark:border-gray-700/50 sticky top-0 z-50 transition-all duration-300`}
>
  <!-- Logo with availability indicator -->
  <div class="flex items-center gap-3">
    <a
      href="/"
      class="flex items-center gap-3 group"
    >
      <div class="relative">
        <img
          class="flex rounded-full size-10 md:size-12 ring-2 ring-blue-500/20 group-hover:ring-blue-500/40 transition-all duration-300"
          src="/img/optimized/profile_picture.webp"
          alt="Ignacio Amat Urbina - Desarrollador Web Full Stack"
          width="48"
          height="48"
          loading="eager"
        />
        <!-- Availability indicator dot -->
        <span class="absolute -bottom-0.5 -right-0.5 flex h-3.5 w-3.5">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-3.5 w-3.5 bg-green-500 border-2 border-white dark:border-gray-900"></span>
        </span>
      </div>
      <div class="hidden sm:block">
        <h1 class="text-lg font-semibold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
          Ignacio Amat
        </h1>
        <p class="text-xs text-gray-600 dark:text-gray-400 flex items-center gap-1">
          <span class="text-green-600 dark:text-green-400 font-medium">Disponible</span>
          <span class="text-gray-400">â€¢</span>
          Full Stack Developer
        </p>
      </div>
    </a>
  </div>

  <!-- Desktop Navigation -->
  <div class="hidden lg:flex flex-1 justify-center mx-4">
    <nav class="flex items-center gap-4 text-base">
      {
        pathname !== "/" ? (
          <a
            class="text-gray-700 dark:text-gray-300 transition rounded-lg hover:bg-blue-50 dark:hover:bg-gray-700 hover:text-blue-700 dark:hover:text-blue-400 px-3 py-2 font-medium"
            href="/"
          >
            Inicio
          </a>
        ) : (
          <>
            <a
              class="text-gray-700 dark:text-gray-300 transition rounded-lg hover:bg-blue-50 dark:hover:bg-gray-700 hover:text-blue-700 dark:hover:text-blue-400 px-3 py-2 font-medium"
              href="#services"
            >
              Servicios
            </a>
            <a
              class="text-gray-700 dark:text-gray-300 transition rounded-lg hover:bg-blue-50 dark:hover:bg-gray-700 hover:text-blue-700 dark:hover:text-blue-400 px-3 py-2 font-medium"
              href="#experience"
            >
              Experiencia
            </a>
            <a
              class="text-gray-700 dark:text-gray-300 transition rounded-lg hover:bg-blue-50 dark:hover:bg-gray-700 hover:text-blue-700 dark:hover:text-blue-400 px-3 py-2 font-medium"
              href="#projects"
            >
              Proyectos
            </a>
            <a
              class="text-gray-700 dark:text-gray-300 transition rounded-lg hover:bg-blue-50 dark:hover:bg-gray-700 hover:text-blue-700 dark:hover:text-blue-400 px-3 py-2 font-medium"
              href="#contact"
            >
              Contacto
            </a>
          </>
        )
      }
    </nav>
  </div>

  <!-- Controls -->
  <div class="flex items-center gap-2">
    <a
      class="inline-flex bg-blue-600 text-white transition rounded-lg hover:bg-blue-700 px-3 py-1.5 text-sm font-medium"
      href="/blog"
      rel="noopener noreferrer"
    >
      Blog
    </a>
    <ThemeToggle />
    <Dropdown class="hidden lg:flex" />
    <MobileNav pathname={pathname} />
  </div>
</header>
