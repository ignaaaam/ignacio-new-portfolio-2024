---
import Dropdown from "./Dropdown.astro";
import ThemeToggle from "./ThemeToggle.astro";
const pathname = Astro.url.pathname;
---

<header
  class={`flex items-center w-full py-6 mx-auto px-4 lg:px-8 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm border-b border-gray-200 dark:border-gray-700 ${pathname !== "/" ? "justify-between" : "justify-between"} sticky top-0 z-50`}
>
  <div class="flex items-center gap-3 mr-4">
    <a href="/" class="flex items-center gap-3">
      <img
        class="flex rounded-full size-10 md:size-12 ring-2 ring-blue-500/20"
        src="/img/profile_picture.jpg"
        alt="ignathedev photo"
      />
      <div class="hidden md:block">
        <h1 class="text-lg font-semibold text-gray-900 dark:text-white">Ignacio Amat</h1>
        <p class="text-sm text-gray-600 dark:text-gray-300">Full Stack Developer</p>
      </div>
    </a>
  </div>

  <div class="flex-1 flex justify-center">
    <nav class="flex flex-wrap items-center justify-center gap-2 lg:gap-4 text-sm lg:text-base">
      {
        pathname !== "/" ? 
          <a
            class="text-gray-700 dark:text-gray-300 transition rounded-lg hover:bg-blue-50 dark:hover:bg-gray-700 hover:text-blue-700 dark:hover:text-blue-400 px-3 py-2 font-medium"
            href="/"
          >
            Inicio
          </a>
         : 
          <>
            <a
              class="text-gray-700 dark:text-gray-300 transition rounded-lg hover:bg-blue-50 dark:hover:bg-gray-700 hover:text-blue-700 dark:hover:text-blue-400 px-3 py-2 font-medium"
              href="#services"
            >
              Servicios
            </a>
            <a
              class="text-gray-700 dark:text-gray-300 transition rounded-lg hover:bg-blue-50 dark:hover:bg-gray-700 hover:text-blue-700 dark:hover:text-blue-400 px-3 py-2 font-medium"
              href="#experience"
            >
              Experiencia
            </a>
            <a
              class="text-gray-700 dark:text-gray-300 transition rounded-lg hover:bg-blue-50 dark:hover:bg-gray-700 hover:text-blue-700 dark:hover:text-blue-400 px-3 py-2 font-medium"
              href="#projects"
            >
              Proyectos
            </a>
            <a
              class="text-gray-700 dark:text-gray-300 transition rounded-lg hover:bg-blue-50 dark:hover:bg-gray-700 hover:text-blue-700 dark:hover:text-blue-400 px-3 py-2 font-medium"
              href="#contact"
            >
              Contacto
            </a>
          </>
      }
    </nav>
  </div>

  <div class="flex items-center gap-3">
    <a
      class="hidden lg:inline-flex bg-blue-600 text-white transition rounded-lg hover:bg-blue-700 px-4 py-2 text-sm font-medium"
      href="/blog"
      rel="noopener noreferrer"
    >
      Blog
    </a>
    <a
      class="lg:hidden bg-blue-600 text-white transition rounded-lg hover:bg-blue-700 px-4 py-2 text-sm font-medium"
      href="/blog"
      rel="noopener noreferrer"
    >
      Blog
    </a>
    <ThemeToggle />
    <Dropdown class="flex" />
  </div>
</header>
