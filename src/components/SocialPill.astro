---
const { href } = Astro.props
const isExternalLink = !href.startsWith('#')
---

<a
  class="social-pill rounded-full border border-gray-200 flex justify-center items-center gap-x-2 py-2 px-4 text-sm transition bg-white hover:bg-gray-50 hover:border-gray-300 text-gray-700 hover:text-gray-900 shadow-sm hover:shadow-md"
  href={href}
  target={isExternalLink ? "_blank" : undefined}
  rel={isExternalLink ? "noopener noreferrer" : undefined}
>
  <slot />
</a>

<style>
  .social-pill {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
    /* Add consistent min-width to ensure pills have similar size */
    min-width: 6rem;
    /* Fixed height for consistency */
    height: 2rem;
    /* Center content vertically */
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Apply responsive adjustments */
  @media (min-width: 768px) {
    .social-pill {
      min-width: 7rem;
      height: 2.5rem;
    }
  }
</style>
