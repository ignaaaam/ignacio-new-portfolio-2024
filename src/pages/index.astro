---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import FullSectionContainer from "../components/FullSectionContainer.astro";
import LinkedinIcon from "../components/icons/LinkedinIcon.astro";
import GithubIcon from "../components/icons/GithubIcon.astro";
import BriefCaseIcon from "../components/icons/BriefCaseIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import BehanceIcon from "../components/icons/BehanceIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import StackOverflowIcon from "../components/icons/StackOverflowIcon.astro";
import LaracastsIcon from "../components/icons/LaracastsIcon.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import LearningIcon from "../components/icons/LearningIcon.astro";
import CertificationIcon from "../components/icons/CertificationIcon.astro";
import CVDownloadButton from "../components/CVDownloadButton.astro";
import ScrollIndicator from "../components/ScrollIndicator.astro";

import Experience from "../components/Experience.astro";
import Certification from "../components/Certification.astro";
import Studies from "../components/Studies.astro";
import Projects from "../components/Projects.astro";
import ContactForm from "../components/ContactForm.astro";
import SkillsCloud from "../components/SkillsCloud.astro";
---

<Layout
  title="Ignacio Amat Urbina - Desarrollador Web Full Stack en Barcelona | Experto en PHP y Laravel"
  description="Desarrollador web full stack en Barcelona especializado en crear aplicaciones web a medida con PHP, Laravel, Vue y tecnologías modernas. Ofrezco soluciones web de alto rendimiento para empresas y sitios web profesionales optimizados para SEO."
>
  <main class="px-4">
    <SectionContainer
      class="hero-section -mt-6 pt-2 pb-14 md:pt-4 md:pb-16 lg:py-32 min-h-[92vh] md:min-h-[95vh] lg:min-h-screen flex flex-col justify-center relative"
    >
      <h1
        class="flex pb-6 mb-4 text-3xl font-extrabold leading-none text-center text-white md:text-4xl lg:text-5xl gap-x-4 lg:pb-10"
      >
        <span class="text-[1.5rem] md:text-3xl">Hey, soy Ignacio</span>
        <a
          href="https://www.linkedin.com/in/ignacio-amat-urbina-789244223"
          target="_blank"
          rel="noopener"
          class="flex items-center justify-center gap-2"
        >
          <!-- <Badge class="bg-green-400/80 text-emerald-950 hover:bg-green-400 transition-colors">
            Hired
          </Badge> -->
          <Badge class="bg-blue-400/80 text-blue-950 hover:bg-blue-400 transition-colors">
            Open for offers
          </Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span>+3 años de experiencia.</span><span
          class="font-bold text-yellow-200"
        >
          Desarrollador Web Full Stack</span
        >. <span class="text-red-200/90 font-bold"> De Barcelona, España.</span>
        <span class="opacity-75"
          >Especializado en la creación de web apps y sitios web de alto
          rendimiento.</span
        >
      </h2>
      <br />
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        Experto en Desarrollo Web Back End con <span
          class="font-bold text-[#7477AC]">PHP</span
        >, <span class="font-bold text-[#FF2819]">Laravel</span> y <span
          class="font-bold bg-clip-text text-transparent bg-gradient-to-r from-[#005E8A] from-30% to-[#EBA921] to-50%"
          >MYSQL</span
        >, y Desarrollo Front End con <span class="font-bold text-[#3FB27F]"
          >Vue.js</span
        >
        y<span class="font-bold text-[#EFD81D]"> Javascript</span>.
      </h2>

      <!-- Add a prominent CTA button -->
      <div class="mt-8 flex justify-center">
        <a href="#services" class="px-8 py-5 text-xl font-bold text-white bg-gradient-to-r from-indigo-600 to-purple-700 rounded-lg shadow-lg hover:from-indigo-700 hover:to-purple-800 transition-all duration-300 transform hover:scale-105 hover:shadow-xl flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
          Ver mis servicios
        </a>
      </div>
      
      <nav
        class="flex flex-wrap mt-10 gap-4 overflow-x-auto pb-2 max-w-full social-pills-container"
      >
        <SocialPill
          href="https://www.linkedin.com/in/ignacio-amat-urbina-789244223"
        >
          <LinkedinIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://www.github.com/ignaaaam">
          <GithubIcon class="size-4 md:size-6" />
          Github
        </SocialPill>
        <SocialPill href="https://www.behance.net/igna21df">
          <BehanceIcon class="size-4 md:size-6" />
          Behance
        </SocialPill>
        <SocialPill
          href="https://stackoverflow.com/users/18973790/ignacio?tab=profile"
        >
          <StackOverflowIcon class="size-4 md:size-6" />
          StackOverflow
        </SocialPill>
        <SocialPill href="https://laracasts.com/@ignaaaam">
          <LaracastsIcon class="size-4 md:size-6" />
          Laracasts
        </SocialPill>
        <CVDownloadButton> Descargar CV </CVDownloadButton>
        <div class="flex flex-col items-start">
          <SocialPill
            href="#contact"
            class="min-w-[16rem] md:min-w-[18rem]"
          >
            <MailIcon class="size-4 md:size-6" />
            ignacioamat@ignathedev.com
          </SocialPill>
          <span class="text-xs text-white/70 ml-2 mt-1 italic">
            Contáctame por email
          </span>
        </div>
      </nav>
      
      <!-- Scroll indicator (visible on all devices, adjusted for better visibility) -->
      <ScrollIndicator class="!bottom-2 md:!bottom-16 lg:!bottom-24" />
      
      <!-- CTA button - positioned at the right for better visibility -->
    </SectionContainer>

    <!-- New services section with clear value proposition -->
    <SectionContainer id="services" class="py-20 px-4 md:py-28 relative" wide={true}>
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-900/20 via-slate-900/10 to-purple-900/20 rounded-xl border border-indigo-400/20 -z-10"></div>
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-8">Mis Servicios</h2>
      <p class="text-xl text-white/80 text-center max-w-3xl mx-auto mb-16 md:mb-20 px-4">
        Soluciones web a medida: desde páginas de aterrizaje optimizadas hasta aplicaciones complejas, enfocadas en rendimiento, usabilidad y resultados.
      </p>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 md:gap-10 mb-16 md:mb-20 px-4 md:px-0">
        <!-- Card 1: Desarrollo Web Integral -->
        <div class="bg-gradient-to-br from-slate-800/60 to-slate-900/60 p-6 md:p-8 rounded-xl border border-indigo-400/20 hover:border-indigo-400/50 hover:shadow-xl hover:shadow-indigo-500/10 transition-all duration-300 group flex flex-col md:flex-row items-start gap-5">
          <div class="flex-shrink-0 bg-indigo-900/40 w-14 h-14 md:w-16 md:h-16 rounded-xl flex items-center justify-center mt-1 group-hover:bg-indigo-800/50 transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 md:h-9 md:w-9 text-indigo-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="flex-grow flex flex-col h-full">
            <h3 class="text-xl md:text-2xl font-bold mb-3">Desarrollo Web Integral</h3>
            <p class="text-white/80 mb-5 text-base leading-relaxed flex-grow">
              Creo soluciones web completas y personalizadas, desde sitios web estáticos y landing pages con Astro hasta aplicaciones dinámicas complejas, adaptadas a tus objetivos.
            </p>
            <div class="flex flex-wrap gap-2 mt-auto pt-2">
              <span class="text-xs font-medium bg-indigo-900/50 text-indigo-300 py-1 px-2.5 rounded-md">PHP</span>
              <span class="text-xs font-medium bg-indigo-900/50 text-indigo-300 py-1 px-2.5 rounded-md">Laravel</span>
              <span class="text-xs font-medium bg-sky-900/60 text-sky-300 py-1 px-2.5 rounded-md">Astro</span>
              <span class="text-xs font-medium bg-emerald-900/60 text-emerald-300 py-1 px-2.5 rounded-md">Vue.js</span>
              <span class="text-xs font-medium bg-gray-700/60 text-gray-300 py-1 px-2.5 rounded-md">WordPress</span>
            </div>
          </div>
        </div>

        <!-- Card 2: Back-End Robusto y Escalable -->
        <div class="bg-gradient-to-br from-slate-800/60 to-slate-900/60 p-6 md:p-8 rounded-xl border border-indigo-400/20 hover:border-indigo-400/50 hover:shadow-xl hover:shadow-indigo-500/10 transition-all duration-300 group flex flex-col md:flex-row items-start gap-5">
          <div class="flex-shrink-0 bg-indigo-900/40 w-14 h-14 md:w-16 md:h-16 rounded-xl flex items-center justify-center mt-1 group-hover:bg-indigo-800/50 transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 md:h-9 md:w-9 text-indigo-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <div class="flex-grow flex flex-col h-full">
            <h3 class="text-xl md:text-2xl font-bold mb-3">Back-End Robusto y Escalable</h3>
            <p class="text-white/80 mb-5 text-base leading-relaxed flex-grow">
              Construyo la lógica y la base de datos de tus aplicaciones web asegurando rendimiento, seguridad y escalabilidad. Experiencia en PHP y Laravel para APIs y sistemas complejos.
            </p>
            <div class="flex flex-wrap gap-2 mt-auto pt-2">
              <span class="text-xs font-medium bg-indigo-900/50 text-indigo-300 py-1 px-2.5 rounded-md">PHP</span>
              <span class="text-xs font-medium bg-red-900/60 text-red-300 py-1 px-2.5 rounded-md">Laravel</span>
              <span class="text-xs font-medium bg-blue-900/60 text-blue-300 py-1 px-2.5 rounded-md">MySQL</span>
              <span class="text-xs font-medium bg-purple-900/60 text-purple-300 py-1 px-2.5 rounded-md">API REST</span>
              <span class="text-xs font-medium bg-yellow-900/60 text-yellow-300 py-1 px-2.5 rounded-md">Seguridad</span>
            </div>
          </div>
        </div>

        <!-- Card 3: Interfaces Modernas y Optimizadas -->
        <div class="bg-gradient-to-br from-slate-800/60 to-slate-900/60 p-6 md:p-8 rounded-xl border border-indigo-400/20 hover:border-indigo-400/50 hover:shadow-xl hover:shadow-indigo-500/10 transition-all duration-300 group flex flex-col md:flex-row items-start gap-5">
          <div class="flex-shrink-0 bg-indigo-900/40 w-14 h-14 md:w-16 md:h-16 rounded-xl flex items-center justify-center mt-1 group-hover:bg-indigo-800/50 transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 md:h-9 md:w-9 text-indigo-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="flex-grow flex flex-col h-full">
            <h3 class="text-xl md:text-2xl font-bold mb-3">Interfaces Modernas y Optimizadas</h3>
            <p class="text-white/80 mb-5 text-base leading-relaxed flex-grow">
              Diseño y desarrollo interfaces de usuario atractivas, rápidas y fáciles de usar con Vue.js, Astro y TailwindCSS, enfocadas en la experiencia del usuario y la conversión.
            </p>
            <div class="flex flex-wrap gap-2 mt-auto pt-2">
              <span class="text-xs font-medium bg-emerald-900/60 text-emerald-300 py-1 px-2.5 rounded-md">Vue.js</span>
              <span class="text-xs font-medium bg-sky-900/60 text-sky-300 py-1 px-2.5 rounded-md">Astro</span>
              <span class="text-xs font-medium bg-cyan-900/60 text-cyan-300 py-1 px-2.5 rounded-md">TailwindCSS</span>
              <span class="text-xs font-medium bg-yellow-800/60 text-yellow-300 py-1 px-2.5 rounded-md">JavaScript</span>
              <span class="text-xs font-medium bg-pink-900/60 text-pink-300 py-1 px-2.5 rounded-md">UX/UI</span>
              <span class="text-xs font-medium bg-orange-900/60 text-orange-300 py-1 px-2.5 rounded-md">Rendimiento</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Value proposition boxes -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 mb-16 md:mb-20 px-4 md:px-0">
        <div class="bg-gradient-to-br from-slate-800/40 to-slate-900/40 p-6 rounded-xl border border-slate-700/50 hover:border-slate-600/70 transition-all duration-300">
          <div class="flex items-center mb-4">
            <div class="rounded-lg bg-green-500/10 p-2.5 md:p-3 mr-3 md:mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 md:h-7 md:w-7 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg md:text-xl font-semibold">Alta Calidad</h3>
          </div>
          <p class="text-white/80 text-base md:text-lg">Código limpio, mantenible y testeado siguiendo las mejores prácticas de la industria.</p>
        </div>

        <div class="bg-gradient-to-br from-slate-800/40 to-slate-900/40 p-6 rounded-xl border border-slate-700/50 hover:border-slate-600/70 transition-all duration-300">
          <div class="flex items-center mb-4">
            <div class="rounded-lg bg-blue-500/10 p-2.5 md:p-3 mr-3 md:mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 md:h-7 md:w-7 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-lg md:text-xl font-semibold">Alto Rendimiento</h3>
          </div>
          <p class="text-white/80 text-base md:text-lg">Sitios web y aplicaciones rápidas, optimizadas para la velocidad y una mejor experiencia de usuario (UX).</p>
        </div>

        <div class="bg-gradient-to-br from-slate-800/40 to-slate-900/40 p-6 rounded-xl border border-slate-700/50 hover:border-slate-600/70 transition-all duration-300">
          <div class="flex items-center mb-4">
            <div class="rounded-lg bg-purple-500/10 p-2.5 md:p-3 mr-3 md:mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 md:h-7 md:w-7 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
              </svg>
            </div>
            <h3 class="text-lg md:text-xl font-semibold">Tecnología Moderna</h3>
          </div>
          <p class="text-white/80 text-base md:text-lg">Uso de las últimas tecnologías y frameworks para crear soluciones escalables, seguras y preparadas para el futuro.</p>
        </div>
      </div>

      <!-- CTA section with two buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-5 sm:gap-8 mt-12 md:mt-16 px-4">
        <a href="#projects" class="w-full sm:w-auto px-8 py-4 text-base sm:text-lg font-bold text-white bg-gradient-to-r from-blue-600 to-indigo-700 rounded-lg shadow-xl hover:from-blue-700 hover:to-indigo-800 transition-all duration-300 transform hover:scale-105 flex items-center justify-center gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          Ver proyectos
        </a>
        
        <a href="#contact" class="w-full sm:w-auto px-8 py-4 text-base sm:text-lg font-bold text-white bg-gradient-to-r from-indigo-600 to-purple-700 rounded-lg shadow-xl hover:from-indigo-700 hover:to-purple-800 transition-all duration-300 transform hover:scale-105 flex items-center justify-center gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          Solicitar presupuesto
        </a>
      </div>
      
      <p class="text-white/70 mt-5 text-center text-base">Sin compromiso • Respuesta en 24-48h</p>
    </SectionContainer>

    <SectionContainer
      id="expertise"
      class="!pt-24"
    >
      <SkillsCloud lang="es" />
    </SectionContainer>

    <FullSectionContainer
      id="landingPage"
      class="relative py-20 bg-gradient-to-b from-transparent via-purple-900/10 to-transparent"
    >
      <div class="max-w-4xl mx-auto text-center">
        <h2
          class="mb-6 text-5xl lg:text-6xl font-bold text-yellow-200 text-glow gap-x-3"
        >
          ¿Necesitas una página web profesional?
        </h2>
        <div class="space-y-6 mb-12">
          <h3 class="text-3xl lg:text-4xl font-bold text-yellow-200">
            Desarrollo web personalizado para tu negocio
          </h3>
          <div class="flex flex-wrap justify-center gap-4 text-lg">
            <span class="flex items-center gap-2">
              <svg
                class="w-6 h-6 text-green-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                ></path>
              </svg>
              Landing Pages
            </span>
            <span class="flex items-center gap-2">
              <svg
                class="w-6 h-6 text-green-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                ></path>
              </svg>
              E-commerce
            </span>
            <span class="flex items-center gap-2">
              <svg
                class="w-6 h-6 text-green-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                ></path>
              </svg>
              Aplicaciones Web
            </span>
          </div>
          <p class="text-xl opacity-90 max-w-2xl mx-auto">
            Diseño y desarrollo sitios web optimizados, rápidos y efectivos que
            ayudan a tu negocio a crecer online.
          </p>
        </div>

        <a href="#contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-purple-600 to-purple-800 rounded-full hover:from-purple-700 hover:to-purple-900 transition-all duration-300 transform hover:scale-105 hover:shadow-lg">
          ¿Hablamos de tu proyecto?
        </a>
      </div>
    </FullSectionContainer>
    <SectionContainer
      id="experience"
      class="relative group"
    >
      <div
        class="absolute inset-0 bg-gradient-to-br from-slate-800/20 to-purple-900/20 rounded-xl border border-purple-400/30 transition-all duration-300 -z-10 group-hover:shadow-[0_0_30px_-5px_rgba(109,40,217,0.3)]"
      >
      </div>
      <div class="p-6 md:p-8">
        <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
          <BriefCaseIcon class="size-8" />
          Experiencia Laboral
        </h2>
        <Experience />
      </div>
    </SectionContainer>

    <SectionContainer
      id="academics"
      class="py-16"
    >
      <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
        <LearningIcon class="size-8" />
        Experiencia Académica
      </h2>
      <Studies />
    </SectionContainer>
    <SectionContainer
      id="certifications"
      class="py-16"
    >
      <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
        <CertificationIcon class="size-8" />
        Certificaciones
      </h2>
      <Certification />
    </SectionContainer>

    <SectionContainer
      id="projects"
      class="py-16"
    >
      <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
        <CodeIcon class="size-8" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="contact" class="py-16">
      <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
        <MailIcon class="size-8" />
        Contacto
      </h2>
      <ContactForm />
    </SectionContainer>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 1200px;
    max-width: calc(100% - 1rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
