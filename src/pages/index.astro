---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import FullSectionContainer from "../components/FullSectionContainer.astro";
import LinkedinIcon from "../components/icons/LinkedinIcon.astro";
import GithubIcon from "../components/icons/GithubIcon.astro";
import BriefCaseIcon from "../components/icons/BriefCaseIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import BehanceIcon from "../components/icons/BehanceIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import StackOverflowIcon from "../components/icons/StackOverflowIcon.astro";
import LaracastsIcon from "../components/icons/LaracastsIcon.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import LearningIcon from "../components/icons/LearningIcon.astro";
import CertificationIcon from "../components/icons/CertificationIcon.astro";
import CVDownloadButton from "../components/CVDownloadButton.astro";
import ScrollIndicator from "../components/ScrollIndicator.astro";

import Experience from "../components/Experience.astro";
import Certification from "../components/Certification.astro";
import Studies from "../components/Studies.astro";
import Projects from "../components/Projects.astro";
import ContactForm from "../components/ContactForm.astro";
import SkillsCloud from "../components/SkillsCloud.astro";
---

<Layout
  title="Ignacio Amat Urbina - Desarrollador Web Full Stack en Barcelona | Experto en PHP y Laravel"
  description="Desarrollador web full stack en Barcelona especializado en crear aplicaciones web a medida con PHP, Laravel, Vue y tecnologías modernas. Ofrezco soluciones web de alto rendimiento para empresas y sitios web profesionales optimizados para SEO."
>
  <main class="px-4">
    <SectionContainer
      class="hero-section -mt-6 pt-2 pb-14 md:pt-4 md:pb-16 lg:py-32 min-h-[92vh] md:min-h-[95vh] lg:min-h-screen flex flex-col justify-center relative"
    >
      <h1
        class="flex pb-6 mb-4 text-3xl font-extrabold leading-none text-center text-white md:text-4xl lg:text-5xl gap-x-4 lg:pb-10"
      >
        <span class="text-[1.5rem] md:text-3xl">Hey, soy Ignacio</span>
        <a
          href="https://www.linkedin.com/in/ignacio-amat-urbina-789244223"
          target="_blank"
          rel="noopener"
          class="flex items-center justify-center gap-2"
        >
          <!-- <Badge class="bg-green-400/80 text-emerald-950 hover:bg-green-400 transition-colors">
            Hired
          </Badge> -->
          <Badge class="bg-blue-400/80 text-blue-950 hover:bg-blue-400 transition-colors">
            Open for offers
          </Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span>+3 años de experiencia.</span><span
          class="font-bold text-yellow-200"
        >
          Desarrollador Web Full Stack</span
        >. <span class="text-red-200/90 font-bold"> De Barcelona, España.</span>
        <span class="opacity-75"
          >Especializado en la creación de web apps y sitios web de alto
          rendimiento.</span
        >
      </h2>
      <br />
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        Experto en Desarrollo Web Back End con <span
          class="font-bold text-[#7477AC]">PHP</span
        >, <span class="font-bold text-[#FF2819]">Laravel</span> y <span
          class="font-bold bg-clip-text text-transparent bg-gradient-to-r from-[#005E8A] from-30% to-[#EBA921] to-50%"
          >MYSQL</span
        >, y Desarrollo Front End con <span class="font-bold text-[#3FB27F]"
          >Vue.js</span
        >
        y<span class="font-bold text-[#EFD81D]"> Javascript</span>.
      </h2>
      <nav
        class="flex flex-wrap mt-20 gap-4 overflow-x-auto pb-2 max-w-full social-pills-container"
      >
        <SocialPill
          href="https://www.linkedin.com/in/ignacio-amat-urbina-789244223"
        >
          <LinkedinIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://www.github.com/ignaaaam">
          <GithubIcon class="size-4 md:size-6" />
          Github
        </SocialPill>
        <SocialPill href="https://www.behance.net/igna21df">
          <BehanceIcon class="size-4 md:size-6" />
          Behance
        </SocialPill>
        <SocialPill
          href="https://stackoverflow.com/users/18973790/ignacio?tab=profile"
        >
          <StackOverflowIcon class="size-4 md:size-6" />
          StackOverflow
        </SocialPill>
        <SocialPill href="https://laracasts.com/@ignaaaam">
          <LaracastsIcon class="size-4 md:size-6" />
          Laracasts
        </SocialPill>
        <CVDownloadButton> Descargar CV </CVDownloadButton>
        <div class="flex flex-col items-start">
          <SocialPill
            href="#contact"
            class="min-w-[16rem] md:min-w-[18rem]"
          >
            <MailIcon class="size-4 md:size-6" />
            ignacioamat@ignathedev.com
          </SocialPill>
          <span class="text-xs text-white/70 ml-2 mt-1 italic"
            >Contáctame por email</span
          >
        </div>
      </nav>

      <!-- Scroll indicator (visible on all devices, adjusted for better visibility) -->
      <ScrollIndicator class="!bottom-2 md:!bottom-16 lg:!bottom-24" />

      <!-- CTA button - positioned at the right for better visibility -->
    </SectionContainer>

    <SectionContainer
      id="expertise"
      class="!pt-24"
    >
      <SkillsCloud lang="es" />
    </SectionContainer>

    <FullSectionContainer
      id="landingPage"
      class="relative py-20 bg-gradient-to-b from-transparent via-purple-900/10 to-transparent"
    >
      <div class="max-w-4xl mx-auto text-center">
        <h2
          class="mb-6 text-5xl lg:text-6xl font-bold text-yellow-200 text-glow gap-x-3"
        >
          ¿Necesitas una página web profesional?
        </h2>
        <div class="space-y-6 mb-12">
          <h3 class="text-3xl lg:text-4xl font-bold text-yellow-200">
            Desarrollo web personalizado para tu negocio
          </h3>
          <div class="flex flex-wrap justify-center gap-4 text-lg">
            <span class="flex items-center gap-2">
              <svg
                class="w-6 h-6 text-green-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                ></path>
              </svg>
              Landing Pages
            </span>
            <span class="flex items-center gap-2">
              <svg
                class="w-6 h-6 text-green-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                ></path>
              </svg>
              E-commerce
            </span>
            <span class="flex items-center gap-2">
              <svg
                class="w-6 h-6 text-green-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                ></path>
              </svg>
              Aplicaciones Web
            </span>
          </div>
          <p class="text-xl opacity-90 max-w-2xl mx-auto">
            Diseño y desarrollo sitios web optimizados, rápidos y efectivos que
            ayudan a tu negocio a crecer online.
          </p>
        </div>

        <ContactForm id="contact" />
      </div>
    </FullSectionContainer>
    <SectionContainer
      id="experience"
      class="relative group"
    >
      <div
        class="absolute inset-0 bg-gradient-to-br from-slate-800/20 to-purple-900/20 rounded-xl border border-purple-400/30 transition-all duration-300 -z-10 group-hover:shadow-[0_0_30px_-5px_rgba(109,40,217,0.3)]"
      >
      </div>
      <div class="p-6 md:p-8">
        <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
          <BriefCaseIcon class="size-8" />
          Experiencia Laboral
        </h2>
        <Experience />
      </div>
    </SectionContainer>

    <SectionContainer
      id="academics"
      class="py-16"
    >
      <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
        <LearningIcon class="size-8" />
        Experiencia Académica
      </h2>
      <Studies />
    </SectionContainer>
    <SectionContainer
      id="certifications"
      class="py-16"
    >
      <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
        <CertificationIcon class="size-8" />
        Certificaciones
      </h2>
      <Certification />
    </SectionContainer>

    <SectionContainer
      id="projects"
      class="py-16"
    >
      <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
        <CodeIcon class="size-8" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 1200px;
    max-width: calc(100% - 1rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }

  #landingPageTitle {
    background: linear-gradient(
      90deg,
      rgba(36, 5, 3, 0.705) 0%,
      rgba(255, 40, 25, 0.829) 50%,
      rgba(36, 5, 3, 0.705) 100%
    );
    line-height: normal;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @keyframes pulse-white {
    0% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
    }

    70% {
      transform: scale(1);
      box-shadow: 0 0 0 10px rgba(255, 255, 255, 0);
    }

    100% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
    }
  }

  @keyframes pulse-cv {
    0% {
      box-shadow: 0 0 0 0 rgba(255, 220, 100, 0.7);
    }

    70% {
      box-shadow: 0 0 0 8px rgba(255, 220, 100, 0);
    }

    100% {
      box-shadow: 0 0 0 0 rgba(255, 220, 100, 0);
    }
  }

  .cv-button-wrapper a {
    background: linear-gradient(135deg, #ffdc64, #ff9a3d) !important;
    border: 2px solid rgba(255, 220, 100, 0.6) !important;
    font-weight: 600 !important;
    color: #000 !important;
    animation: pulse-cv 2.5s infinite;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }

  .cv-button-wrapper a:hover {
    transform: translateY(-3px);
    background: linear-gradient(135deg, #ffea94, #ffb06d) !important;
    box-shadow: 0 7px 14px rgba(255, 220, 100, 0.3);
  }

  .cv-button-wrapper a::before {
    content: "";
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    z-index: -1;
    background: linear-gradient(90deg, #ffdc64, #ff9a3d, #ffdc64);
    background-size: 200% 100%;
    animation: gradientMove 3s linear infinite;
    opacity: 0.7;
    border-radius: 9999px;
  }

  @keyframes gradientMove {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Make the CV button stand out even more with a scale effect */
  .cv-button-wrapper {
    display: inline-block;
    transform: scale(1.05);
  }

  .blob-white {
    background: white;
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 1);
    animation: pulse-white 2s infinite;
  }

  .text-brush {
    background-image: linear-gradient(180deg, #fff06b, #fff06b);
    background-repeat: no-repeat;
    background-position: 10px bottom;
    background-size: 100% 10px;
    text-decoration: none;
  }

  /* Add text glow effect for better visibility on mobile */
  .text-glow {
    text-shadow:
      0 0 10px rgba(255, 240, 107, 0.7),
      0 0 20px rgba(255, 240, 107, 0.4);
    position: relative;
    z-index: 1;
  }

  @media (max-width: 640px) {
    .text-glow {
      text-shadow:
        0 0 15px rgba(255, 240, 107, 0.8),
        0 0 25px rgba(255, 240, 107, 0.5);
    }
  }

  @keyframes bounce-slow {
    0%,
    100% {
      transform: translateY(0) scale(1.5);
    }
    50% {
      transform: translateY(-10px) scale(1.5);
    }
  }

  .animate-bounce-slow {
    animation: bounce-slow 3s ease-in-out infinite;
  }
</style>
