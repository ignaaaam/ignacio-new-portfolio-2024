---
import Layout from "../layouts/Layout.astro"

import { getLangFromUrl, useTranslations  } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<Layout
  title="Página no encontrada (404) | Ignacio Amat - Desarrollador Web"
  description="La página que buscas no existe. Volver al portfolio de Ignacio Amat, desarrollador web full stack en Barcelona."
  robots="noindex, nofollow"
>

<main class="flex flex-col items-center justify-center min-h-screen text-center">
  <h1 class="text-[90px] font-bold text-gray-900 dark:text-white">404</h1>
  <p class="mt-3 text-lg text-gray-700 dark:text-gray-300">{t('404-content')}</p>
  <a class="inline-flex items-center px-4 py-2 mt-8 text-sm font-medium text-gray-900 dark:text-gray-100 transition bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-yellow-500/90 focus:z-10 focus:ring-2 focus:outline-none focus:ring-gray-200 focus:text-yellow-500/90" href="/">
    {t('404-button')}
  </a>
</main>
</Layout>