---
interface Props {
  title: string;
  institution: string;
  location: string;
  date: string;
  description: string;
  link?: string;
}
const { title, institution, date, description, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-blue-500 dark:bg-gray-200 rounded-full mt-1 -left-1.5 border border-white dark:border-gray-900 z-10"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-gray-600 dark:text-sky-200">{date}</time>
<h3 class="text-lg font-semibold text-gray-900 dark:text-yellow-200">
  {title}
</h3>
<span class="text-base font-bold text-blue-700 dark:text-yellow-100">
  {institution}
</span>
<p class="mb-4 text-base font-normal text-gray-700 dark:text-gray-200 text-pretty">
  {description}
</p>
{
  link ? (
    <a
      href={link}
      target="_blank"
      rel="noopener"
      class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 dark:text-gray-100 transition bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-blue-600 dark:hover:text-blue-400 focus:z-10 focus:ring-2 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-600"
    >
    Know More...{" "}
    <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  ) : (
    ""
  )
}
