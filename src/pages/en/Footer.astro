---
import SocialShareButtons from '../../components/SocialShareButtons.astro';
import LinkedinIcon from '../../components/icons/LinkedinIcon.astro';
import GithubIcon from '../../components/icons/GithubIcon.astro';
import MailIcon from '../../components/icons/MailIcon.astro';
---

<footer
  class="bg-gradient-to-b from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 border-t border-gray-200 dark:border-gray-700 mt-20"
>
  <div class="w-full max-w-screen-xl px-6 py-12 mx-auto">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Brand Column -->
      <div class="space-y-4">
        <div class="flex items-center gap-3">
          <img
            class="rounded-full size-12 ring-2 ring-blue-500/20"
            src="/img/optimized/profile_picture.webp"
            alt="Ignacio Amat Urbina"
            width="48"
            height="48"
            loading="lazy"
          />
          <div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white">Ignacio Amat</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Full Stack Developer</p>
          </div>
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
          Web developer specialized in creating high-performance applications with PHP, Laravel, and Vue.js.
        </p>
        <!-- Social Links -->
        <div class="flex items-center gap-3">
          <a href="https://www.linkedin.com/in/ignacio-amat-urbina-789244223" target="_blank" rel="noopener noreferrer" class="p-2 rounded-lg bg-gray-200 dark:bg-gray-700 hover:bg-blue-100 dark:hover:bg-blue-900/50 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors" aria-label="LinkedIn">
            <LinkedinIcon class="size-5" />
          </a>
          <a href="https://github.com/ignaaaam" target="_blank" rel="noopener noreferrer" class="p-2 rounded-lg bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors" aria-label="GitHub">
            <GithubIcon class="size-5" />
          </a>
          <a href="mailto:ignacioamat@ignathedev.com" class="p-2 rounded-lg bg-gray-200 dark:bg-gray-700 hover:bg-green-100 dark:hover:bg-green-900/50 text-gray-600 dark:text-gray-400 hover:text-green-600 dark:hover:text-green-400 transition-colors" aria-label="Email">
            <MailIcon class="size-5" />
          </a>
        </div>
      </div>

      <!-- Navigation Column -->
      <div class="space-y-4">
        <h4 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider">Navigation</h4>
        <ul class="space-y-2">
          <li>
            <a href="#services" class="text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Services</a>
          </li>
          <li>
            <a href="#experience" class="text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Experience</a>
          </li>
          <li>
            <a href="#projects" class="text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Projects</a>
          </li>
          <li>
            <a href="#certifications" class="text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Certifications</a>
          </li>
          <li>
            <a href="/en/blog" class="text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Blog</a>
          </li>
        </ul>
      </div>

      <!-- Contact Column -->
      <div class="space-y-4">
        <h4 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider">Contact</h4>
        <ul class="space-y-2">
          <li class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href="mailto:ignacioamat@ignathedev.com" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">ignacioamat@ignathedev.com</a>
          </li>
          <li class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Barcelona, Spain
          </li>
          <li class="flex items-center gap-2 text-sm">
            <span class="flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-2 w-2 rounded-full bg-green-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
            </span>
            <span class="text-green-600 dark:text-green-400 font-medium">Available for projects</span>
          </li>
        </ul>
        <a 
          href="#contact" 
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors"
        >
          Contact now
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-200 dark:border-gray-700 pt-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <span class="text-sm text-gray-600 dark:text-gray-400">
          Â© {new Date().getFullYear()} <a href="https://ignathedev.com/en/" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors font-medium">Ignacio Amat Urbina</a>. All rights reserved.
        </span>
        <SocialShareButtons 
          url="https://ignathedev.com/en/" 
          title="Ignacio Amat Urbina - Full Stack Web Developer for Hire | PHP & Laravel Expert" 
          description="Professional full stack web developer in Spain offering custom web development services."
          hashtags="webdeveloper,hiringwebdeveloper,laravelexpert,customwebdevelopment,professionalwebsites" 
        />
      </div>
    </div>
  </div>
</footer>
