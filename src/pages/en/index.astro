        </div>

        <!-- Scroll indicator -->
        <ScrollIndicator class="!bottom-2 md:!bottom-16 lg:!bottom-24" />
      </div>
    </SectionContainer>

    <!-- Services section with improved design -->
    <SectionContainer
      id="services"
      class="py-20 md:py-28"
    >
      <div class="text-center mb-20">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 dark:text-white">My Services</h2>
