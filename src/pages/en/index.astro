---
import Layout from "../../layouts/Layout.astro";
import Badge from "../../components/Badge.astro";
import SectionContainer from "../../components/SectionContainer.astro";

import LinkedinIcon from "../../components/icons/LinkedinIcon.astro";
import GithubIcon from "../../components/icons/GithubIcon.astro";
import BriefCaseIcon from "../../components/icons/BriefCaseIcon.astro";
import MailIcon from "../../components/icons/MailIcon.astro";
import BehanceIcon from "../../components/icons/BehanceIcon.astro";
import SocialPill from "../../components/SocialPill.astro";
import StackOverflowIcon from "../../components/icons/StackOverflowIcon.astro";
import LaracastsIcon from "../../components/icons/LaracastsIcon.astro";
import CodeIcon from "../../components/icons/CodeIcon.astro";
import LearningIcon from "../../components/icons/LearningIcon.astro";
import CertificationIcon from "../../components/icons/CertificationIcon.astro";
import CVDownloadButton from "../../components/CVDownloadButton.astro";
import ScrollIndicator from "../../components/ScrollIndicator.astro";
import FAQSection from "../../components/FAQSection.astro";

import FullSectionContainer from "../../components/FullSectionContainer.astro";

import Experience from "./Experience.astro";
import Certification from "./Certification.astro";
import Studies from "./Studies.astro";
import Projects from "./Projects.astro";
import ContactForm from "../../components/ContactForm.astro";
import SkillsCloud from "../../components/SkillsCloud.astro";
---

<Layout
  title="Ignacio Amat Urbina - Full Stack Web Developer for Hire | PHP & Laravel Expert"
  description="Professional full stack web developer in Spain offering custom web development services. Specialized in creating high-performance websites and applications with PHP, Laravel, and modern front-end technologies."
>
  <main class="px-4">
    <SectionContainer class="hero-section -mt-6 pt-2 pb-14 md:pt-4 md:pb-16 lg:py-32 min-h-[92vh] md:min-h-[95vh] lg:min-h-screen flex flex-col justify-center relative">
      <h1
        class="flex pb-6 mb-4 text-3xl font-extrabold leading-none text-center text-white md:text-4xl lg:text-5xl gap-x-4 lg:pb-10"
      >
        <span class="text-[1.5rem] md:text-3xl">Hey, I'm Ignacio</span>
        <a
          href="https://www.linkedin.com/in/ignacio-amat-urbina-789244223"
          target="_blank"
          rel="noopener"
          class="flex items-center justify-center gap-2"
        >
          <!-- <Badge class="bg-green-400/80 text-emerald-950 hover:bg-green-400 transition-colors">
            Hired
          </Badge> -->
          <Badge class="bg-blue-400/80 text-blue-950 hover:bg-blue-400 transition-colors">
            Open for offers
          </Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span>+3 years of experience.</span><span
          class="font-bold text-yellow-200"
        >
          Full Stack Web Developer</span
        >. <span class="text-red-200/90 font-bold"> From Barcelona, Spain.</span>
        <span class="opacity-75"
          >Specialized in creating high-performance web apps and websites.</span
        >
      </h2>
      <br />
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        Expert in Back End Web Development with <span
          class="font-bold text-[#7477AC]">PHP</span
        >, <span class="font-bold text-[#FF2819]">Laravel</span> and <span
          class="font-bold bg-clip-text text-transparent bg-gradient-to-r from-[#005E8A] from-30% to-[#EBA921] to-50%"
          >MYSQL</span
        >, and Front End Development with <span class="font-bold text-[#3FB27F]"
          >Vue.js</span
        >
        and<span class="font-bold text-[#EFD81D]"> Javascript</span>.
      </h2>

      <!-- Add a prominent CTA button -->
      <div class="mt-8 flex justify-center">
        <a href="#services" class="px-8 py-5 text-xl font-bold text-white bg-gradient-to-r from-indigo-600 to-purple-700 rounded-lg shadow-lg hover:from-indigo-700 hover:to-purple-800 transition-all duration-300 transform hover:scale-105 hover:shadow-xl flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
          View my services
        </a>
      </div>
      
      <nav class="flex flex-wrap mt-10 gap-4 overflow-x-auto pb-2 max-w-full social-pills-container">
        <SocialPill
          href="https://www.linkedin.com/in/ignacio-amat-urbina-789244223"
        >
          <LinkedinIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://www.github.com/ignaaaam">
          <GithubIcon class="size-4 md:size-6" />
          Github
        </SocialPill>
        <SocialPill href="https://www.behance.net/igna21df">
          <BehanceIcon class="size-4 md:size-6" />
          Behance
        </SocialPill>
        <SocialPill
          href="https://stackoverflow.com/users/18973790/ignacio?tab=profile"
        >
          <StackOverflowIcon class="size-4 md:size-6" />
          StackOverflow
        </SocialPill>
        <SocialPill href="https://laracasts.com/@ignaaaam">
          <LaracastsIcon class="size-4 md:size-6" />
          Laracasts
        </SocialPill>
        <CVDownloadButton>
          Download CV
        </CVDownloadButton>
        <div class="flex flex-col items-start">
          <SocialPill
            href="#contact"
            class="min-w-[16rem] md:min-w-[18rem]"
          >
            <MailIcon class="size-4 md:size-6" />
            ignacioamat@ignathedev.com
          </SocialPill>
          <span class="text-xs text-white/70 ml-2 mt-1 italic">Contact me by email</span>
        </div>
      </nav>
      
      <!-- Scroll indicator (visible on all devices, adjusted for better visibility) -->
      <ScrollIndicator class="!bottom-2 md:!bottom-16 lg:!bottom-24" />
    </SectionContainer>

    <!-- Services section with improved design -->
    <SectionContainer id="services" class="py-20 md:py-28">
      <div class="text-center mb-20">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">
          My Services
        </h2>
        <p class="text-xl text-white/80 max-w-2xl mx-auto leading-relaxed">
          Custom web solutions: from optimized landing pages to complex applications, focused on performance, usability, and results.
        </p>
      </div>

      <!-- Main services grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-20">
        <!-- Comprehensive Web Development -->
        <div class="group relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-indigo-600/20 via-purple-600/10 to-pink-600/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative bg-slate-900/40 backdrop-blur-sm border border-slate-700/30 rounded-3xl p-6 hover:border-indigo-500/40 hover:bg-slate-900/60 transition-all duration-500 group-hover:shadow-2xl group-hover:shadow-indigo-500/10">
            <!-- Icon and Title Row -->
            <div class="flex items-center gap-4 mb-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent">
                Comprehensive Web Development
              </h3>
            </div>
            
            <!-- Description -->
            <p class="text-white/70 text-sm leading-relaxed mb-4">
              I create complete, custom web solutions, from static websites and landing pages with Astro to complex dynamic applications, tailored to your goals.
            </p>
            
            <!-- Technology Tags -->
            <div class="flex flex-wrap gap-2">
              <span class="text-xs font-semibold bg-indigo-500/20 text-indigo-300 py-1.5 px-2.5 rounded-full border border-indigo-500/30 backdrop-blur-sm">PHP</span>
              <span class="text-xs font-semibold bg-red-500/20 text-red-300 py-1.5 px-2.5 rounded-full border border-red-500/30 backdrop-blur-sm">Laravel</span>
              <span class="text-xs font-semibold bg-sky-500/20 text-sky-300 py-1.5 px-2.5 rounded-full border border-sky-500/30 backdrop-blur-sm">Astro</span>
              <span class="text-xs font-semibold bg-emerald-500/20 text-emerald-300 py-1.5 px-2.5 rounded-full border border-emerald-500/30 backdrop-blur-sm">Vue.js</span>
            </div>
          </div>
        </div>

        <!-- Robust Back-End -->
        <div class="group relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-blue-600/20 via-cyan-600/10 to-teal-600/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative bg-slate-900/40 backdrop-blur-sm border border-slate-700/30 rounded-3xl p-6 hover:border-blue-500/40 hover:bg-slate-900/60 transition-all duration-500 group-hover:shadow-2xl group-hover:shadow-blue-500/10">
            <!-- Icon and Title Row -->
            <div class="flex items-center gap-4 mb-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-500 to-cyan-600 rounded-xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">
                Robust Back-End
              </h3>
            </div>
            
            <!-- Description -->
            <p class="text-white/70 text-sm leading-relaxed mb-4">
              I build the logic and database foundation for your web applications, ensuring performance, security, and scalability. Experienced in PHP and Laravel for APIs and complex systems.
            </p>
            
            <!-- Technology Tags -->
            <div class="flex flex-wrap gap-2">
              <span class="text-xs font-semibold bg-blue-500/20 text-blue-300 py-1.5 px-2.5 rounded-full border border-blue-500/30 backdrop-blur-sm">PHP</span>
              <span class="text-xs font-semibold bg-red-500/20 text-red-300 py-1.5 px-2.5 rounded-full border border-red-500/30 backdrop-blur-sm">Laravel</span>
              <span class="text-xs font-semibold bg-blue-600/20 text-blue-300 py-1.5 px-2.5 rounded-full border border-blue-600/30 backdrop-blur-sm">MySQL</span>
              <span class="text-xs font-semibold bg-purple-500/20 text-purple-300 py-1.5 px-2.5 rounded-full border border-purple-500/30 backdrop-blur-sm">REST API</span>
            </div>
          </div>
        </div>

        <!-- Modern Interfaces -->
        <div class="group relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-emerald-600/20 via-teal-600/10 to-green-600/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative bg-slate-900/40 backdrop-blur-sm border border-slate-700/30 rounded-3xl p-6 hover:border-emerald-500/40 hover:bg-slate-900/60 transition-all duration-500 group-hover:shadow-2xl group-hover:shadow-emerald-500/10">
            <!-- Icon and Title Row -->
            <div class="flex items-center gap-4 mb-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold bg-gradient-to-r from-emerald-400 to-teal-400 bg-clip-text text-transparent">
                Modern Interfaces
              </h3>
            </div>
            
            <!-- Description -->
            <p class="text-white/70 text-sm leading-relaxed mb-4">
              I design and develop attractive, fast, and user-friendly interfaces with Vue.js, Astro, and TailwindCSS, focusing on user experience and conversion.
            </p>
            
            <!-- Technology Tags -->
            <div class="flex flex-wrap gap-2">
              <span class="text-xs font-semibold bg-emerald-500/20 text-emerald-300 py-1.5 px-2.5 rounded-full border border-emerald-500/30 backdrop-blur-sm">Vue.js</span>
              <span class="text-xs font-semibold bg-sky-500/20 text-sky-300 py-1.5 px-2.5 rounded-full border border-sky-500/30 backdrop-blur-sm">Astro</span>
              <span class="text-xs font-semibold bg-cyan-500/20 text-cyan-300 py-1.5 px-2.5 rounded-full border border-cyan-500/30 backdrop-blur-sm">TailwindCSS</span>
              <span class="text-xs font-semibold bg-yellow-500/20 text-yellow-300 py-1.5 px-2.5 rounded-full border border-yellow-500/30 backdrop-blur-sm">JavaScript</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Value propositions with improved design -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
        <div class="text-center group">
          <div class="relative mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-green-500 to-emerald-600 rounded-3xl flex items-center justify-center mx-auto shadow-xl group-hover:shadow-2xl group-hover:shadow-green-500/20 transition-all duration-300 group-hover:scale-110">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="absolute inset-0 bg-gradient-to-br from-green-400 to-emerald-500 rounded-3xl blur-xl opacity-0 group-hover:opacity-30 transition-opacity duration-300"></div>
          </div>
          <h3 class="text-2xl font-bold mb-4 bg-gradient-to-r from-green-400 to-emerald-400 bg-clip-text text-transparent">High Quality</h3>
          <p class="text-white/70 leading-relaxed max-w-sm mx-auto">Clean, maintainable, and tested code following industry best practices.</p>
        </div>

        <div class="text-center group">
          <div class="relative mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-3xl flex items-center justify-center mx-auto shadow-xl group-hover:shadow-2xl group-hover:shadow-blue-500/20 transition-all duration-300 group-hover:scale-110">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div class="absolute inset-0 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-3xl blur-xl opacity-0 group-hover:opacity-30 transition-opacity duration-300"></div>
          </div>
          <h3 class="text-2xl font-bold mb-4 bg-gradient-to-r from-blue-400 to-indigo-400 bg-clip-text text-transparent">High Performance</h3>
          <p class="text-white/70 leading-relaxed max-w-sm mx-auto">Fast websites and applications, optimized for speed and a better user experience.</p>
        </div>

        <div class="text-center group">
          <div class="relative mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-purple-500 to-pink-600 rounded-3xl flex items-center justify-center mx-auto shadow-xl group-hover:shadow-2xl group-hover:shadow-purple-500/20 transition-all duration-300 group-hover:scale-110">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
              </svg>
            </div>
            <div class="absolute inset-0 bg-gradient-to-br from-purple-400 to-pink-500 rounded-3xl blur-xl opacity-0 group-hover:opacity-30 transition-opacity duration-300"></div>
          </div>
          <h3 class="text-2xl font-bold mb-4 bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">Modern Technology</h3>
          <p class="text-white/70 leading-relaxed max-w-sm mx-auto">Using the latest technologies and frameworks to build scalable, secure, and future-proof solutions.</p>
        </div>
      </div>

      <!-- CTA section with improved design -->
      <div class="text-center">
        <div class="flex flex-col sm:flex-row items-center justify-center gap-6 mb-8">
          <a href="#projects" class="group relative px-10 py-5 text-lg font-bold text-white bg-gradient-to-r from-blue-600 to-indigo-700 rounded-2xl shadow-xl hover:from-blue-700 hover:to-indigo-800 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-blue-500/20 flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 group-hover:rotate-12 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            View projects
          </a>
          
          <a href="#contact" class="group relative px-10 py-5 text-lg font-bold text-white bg-gradient-to-r from-indigo-600 to-purple-700 rounded-2xl shadow-xl hover:from-indigo-700 hover:to-purple-800 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-purple-500/20 flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 group-hover:rotate-12 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            Request a quote
          </a>
        </div>
        <p class="text-white/50 text-sm font-medium">No commitment • Response within 24-48h</p>
      </div>
    </SectionContainer>

    <SectionContainer id="expertise" class="!pt-24">
      <SkillsCloud lang="en" />
    </SectionContainer>

    <FullSectionContainer id="landingPage" class="relative py-20 bg-gradient-to-b from-transparent via-purple-900/10 to-transparent">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="mb-6 text-5xl lg:text-6xl font-bold text-yellow-200 text-glow gap-x-3">
          Need a professional website?
        </h2>
        <div class="space-y-6 mb-12">
          <h3 class="text-3xl lg:text-4xl font-bold text-yellow-200">
            Custom web development for your business
          </h3>
          <div class="flex flex-wrap justify-center gap-4 text-lg">
            <span class="flex items-center gap-2">
              <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Landing Pages
            </span>
            <span class="flex items-center gap-2">
              <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              E-commerce
            </span>
            <span class="flex items-center gap-2">
              <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Web Applications
            </span>
          </div>
          <p class="text-xl opacity-90 max-w-2xl mx-auto">
            I design and develop optimized, fast, and effective websites that help your business grow online.
          </p>
        </div>

        <a href="#contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-purple-600 to-purple-800 rounded-full hover:from-purple-700 hover:to-purple-900 transition-all duration-300 transform hover:scale-105 hover:shadow-lg">
          Let's discuss your project
        </a>
      </div>
    </FullSectionContainer>

    <SectionContainer id="experience" class="relative group">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-800/20 to-purple-900/20 rounded-xl border border-purple-400/30 transition-all duration-300 -z-10 group-hover:shadow-[0_0_30px_-5px_rgba(109,40,217,0.3)]" />
      <div class="p-6 md:p-8">
        <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
          <BriefCaseIcon class="size-8" />
          Work Experience
        </h2>
        <Experience />
      </div>
    </SectionContainer>

    <SectionContainer id="academics" class="py-16">
      <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
        <LearningIcon class="size-8" />
        Academic Experience
      </h2>
      <Studies />
    </SectionContainer>

    <SectionContainer id="certifications" class="py-16">
      <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
        <CertificationIcon class="size-8" />
        Certifications
      </h2>
      <Certification />
    </SectionContainer>

    <SectionContainer id="projects" class="py-16">
      <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
        <CodeIcon class="size-8" />
        Projects
      </h2>
      <Projects />
    </SectionContainer>

    <!-- FAQ Section -->
    <SectionContainer id="faq" class="py-16">
      <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
        Frequently Asked Questions
      </h2>
      <FAQSection />
    </SectionContainer>

    <SectionContainer id="contact" class="py-16">
      <h2 class="flex items-center mb-6 text-3xl font-bold gap-x-3">
        <MailIcon class="size-8" />
        Contact
      </h2>
      <ContactForm />
    </SectionContainer>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 1200px;
    max-width: calc(100% - 1rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
