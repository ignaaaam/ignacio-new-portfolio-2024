---
import Layout from "../../layouts/Layout.astro";
import Badge from "../../components/Badge.astro";
import SectionContainer from "../../components/SectionContainer.astro";

import LinkedinIcon from "../../components/icons/LinkedinIcon.astro";
import GithubIcon from "../../components/icons/GithubIcon.astro";
import BriefCaseIcon from "../../components/icons/BriefCaseIcon.astro";
import MailIcon from "../../components/icons/MailIcon.astro";
import BehanceIcon from "../../components/icons/BehanceIcon.astro";
import SocialPill from "../../components/SocialPill.astro";
import StackOverflowIcon from "../../components/icons/StackOverflowIcon.astro";
import LaracastsIcon from "../../components/icons/LaracastsIcon.astro";
import CodeIcon from "../../components/icons/CodeIcon.astro";
import LearningIcon from "../../components/icons/LearningIcon.astro";
import CertificationIcon from "../../components/icons/CertificationIcon.astro";
import CVDownloadButton from "../../components/CVDownloadButton.astro";
import ScrollIndicator from "../../components/ScrollIndicator.astro";
import FAQSection from "../../components/FAQSection.astro";

import PHPIcon from "../../components/icons/PHPIcon.astro";
import LaravelIcon from "../../components/icons/LaravelIcon.astro";
import VueIcon from "../../components/icons/VueIcon.astro";
import JavascriptIcon from "../../components/icons/JavascriptIcon.astro";
import TailwindIcon from "../../components/icons/TailwindIcon.astro";
import ThunderIcon from "../../components/icons/ThunderIcon.astro";

import FullSectionContainer from "../../components/FullSectionContainer.astro";

import Experience from "./Experience.astro";
import Certification from "./Certification.astro";
import Studies from "./Studies.astro";
import Projects from "./Projects.astro";
import ContactForm from "../../components/ContactForm.astro";
import SkillsCloud from "../../components/SkillsCloud.astro";
---

<Layout
  title="Ignacio Amat | Full Stack PHP & Laravel Developer | Available for Remote Hire"
  description="Full stack developer with 5+ years building web applications for brands like PlayStation, TikTok, and Glovo. Expert in PHP, Laravel, and Vue.js. Open to remote positions worldwide."
>
  <main>
    <SectionContainer class="hero-section -mt-6 py-12 md:py-16 lg:py-20 min-h-[92vh] md:min-h-[95vh] lg:min-h-screen flex flex-col justify-center relative">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Availability Badge with pulse animation -->
        <div class="flex items-center justify-center gap-3 mb-5 mt-2 md:mt-0">
          <Badge
            class="bg-green-100 dark:bg-green-900/50 text-green-800 dark:text-green-300 relative overflow-hidden"
          >
            <span class="relative z-10 flex items-center gap-2">
              <span
                class="relative flex h-2 w-2"
                aria-hidden="true"
              >
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-500 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-green-600"></span>
              </span>
              Open to new opportunities
            </span>
          </Badge>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6 leading-tight animate-fade-in text-wrap-balance">
          I'm <span class="bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 bg-clip-text text-transparent animate-gradient">Ignacio</span> — The full stack developer your team needs
        </h1>

        <p class="text-lg lg:text-xl text-gray-700 dark:text-gray-200 mb-4 font-medium leading-relaxed max-w-2xl mx-auto text-wrap-balance">
          <span class="font-semibold">5+ years building web apps</span> for brands like PlayStation, Glovo, and TikTok.
        </p>

        <p class="text-lg lg:text-xl text-gray-700 dark:text-gray-200 mb-5 font-medium leading-relaxed max-w-2xl mx-auto text-wrap-balance">
          Specialized in PHP, Laravel, and Vue.js. Looking to join a remote development team where I can bring clean code, scalable solutions, and the mindset of someone who has shipped real projects for top-tier companies.
        </p>

        <!-- Tech Stack Pills with hover effects -->
        <div class="flex flex-wrap justify-center gap-2 mb-5">
          <span class="bg-blue-50 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300 px-3 py-1.5 rounded-lg text-sm font-medium flex items-center gap-2 hover:scale-105 hover:shadow-md transition-all duration-200 cursor-default">
            <PHPIcon class="w-4 h-4" />
            PHP
          </span>
          <span class="bg-red-50 dark:bg-red-900/50 text-red-700 dark:text-red-300 px-3 py-1.5 rounded-lg text-sm font-medium flex items-center gap-2 hover:scale-105 hover:shadow-md transition-all duration-200 cursor-default">
            <LaravelIcon class="w-4 h-4" />
            Laravel
          </span>
          <span class="bg-green-50 dark:bg-green-900/50 text-green-700 dark:text-green-300 px-3 py-1.5 rounded-lg text-sm font-medium flex items-center gap-2 hover:scale-105 hover:shadow-md transition-all duration-200 cursor-default">
            <VueIcon class="w-4 h-4" />
            Vue.js
          </span>
          <span class="bg-yellow-50 dark:bg-yellow-900/50 text-yellow-700 dark:text-yellow-300 px-3 py-1.5 rounded-lg text-sm font-medium flex items-center gap-2 hover:scale-105 hover:shadow-md transition-all duration-200 cursor-default">
            <JavascriptIcon class="w-4 h-4" />
            JavaScript
            <ThunderIcon class="w-3 h-3 text-yellow-500" />
          </span>
          <span class="bg-sky-50 dark:bg-sky-900/50 text-sky-700 dark:text-sky-300 px-3 py-1.5 rounded-lg text-sm font-medium flex items-center gap-2 hover:scale-105 hover:shadow-md transition-all duration-200 cursor-default">
            <TailwindIcon class="w-4 h-4" />
            TailwindCSS
          </span>
        </div>

        <!-- Stats Section for credibility -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6 max-w-2xl mx-auto">
          <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-xl p-4 border border-gray-200 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-600 transition-colors">
            <div class="text-2xl md:text-3xl font-bold text-blue-600 dark:text-blue-400">+5</div>
            <div class="text-xs md:text-sm text-gray-600 dark:text-gray-400">Years Experience</div>
          </div>
          <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-xl p-4 border border-gray-200 dark:border-gray-700 hover:border-green-300 dark:hover:border-green-600 transition-colors">
            <div class="text-2xl md:text-3xl font-bold text-green-600 dark:text-green-400">10+</div>
            <div class="text-xs md:text-sm text-gray-600 dark:text-gray-400">Companies</div>
          </div>
          <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-xl p-4 border border-gray-200 dark:border-gray-700 hover:border-purple-300 dark:hover:border-purple-600 transition-colors">
            <div class="text-2xl md:text-3xl font-bold text-purple-600 dark:text-purple-400">Top</div>
            <div class="text-xs md:text-sm text-gray-600 dark:text-gray-400">Brands</div>
          </div>
          <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-xl p-4 border border-gray-200 dark:border-gray-700 hover:border-orange-300 dark:hover:border-orange-600 transition-colors">
            <div class="text-2xl md:text-3xl font-bold text-orange-600 dark:text-orange-400">24h</div>
            <div class="text-xs md:text-sm text-gray-600 dark:text-gray-400">Response Time</div>
          </div>
        </div>

        <!-- Call to Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-6">
          <a
            href="#experience"
            class="group px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-indigo-600 to-purple-700 rounded-xl shadow-lg hover:from-indigo-700 hover:to-purple-800 transition-[transform,box-shadow,background] duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-purple-500/25 flex items-center justify-center gap-2 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-purple-500 focus-visible:ring-offset-2"
          >
            View my experience
            <svg
              class="w-5 h-5 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"
              ></path>
            </svg>
          </a>
          <div class="hero-cv-btn">
            <CVDownloadButton isEnglish={true}>Download CV</CVDownloadButton>
          </div>
          <a
            href="#contact"
            class="px-8 py-4 text-lg font-bold text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/50 rounded-xl hover:bg-blue-100 dark:hover:bg-blue-800 transition-[background-color,border-color] duration-300 border-2 border-transparent hover:border-blue-300 dark:hover:border-blue-600 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2"
          >
            Contact me
          </a>
        </div>

        <!-- Social Links -->
        <nav class="flex flex-wrap justify-center gap-3 mb-3">
          <SocialPill href="https://www.linkedin.com/in/ignacio-amat-urbina-789244223">
            <LinkedinIcon class="size-5" />
            LinkedIn
          </SocialPill>
          <SocialPill href="https://www.github.com/ignaaaam">
            <GithubIcon class="size-5" />
            GitHub
          </SocialPill>
          <SocialPill href="https://www.behance.net/ignathedev">
            <BehanceIcon class="size-5" />
            Behance
          </SocialPill>
          <SocialPill href="https://stackoverflow.com/users/13370846/ignacio-amat-urbina">
            <StackOverflowIcon class="size-5" />
            Stack Overflow
          </SocialPill>
          <SocialPill href="https://laracasts.com/@ignacio-amat-urbina">
            <LaracastsIcon class="size-5" />
            Laracasts
          </SocialPill>
          <CVDownloadButton isEnglish={true}>Download CV</CVDownloadButton>
        </nav>

        <!-- Contact info -->
        <div class="flex flex-col items-center justify-center gap-2 mb-6">
          <SocialPill
            href="#contact"
            class="min-w-[16rem] md:min-w-[18rem]"
          >
            <MailIcon class="size-4 md:size-6" />
            ignacioamat@ignathedev.com
          </SocialPill>
          <span class="text-xs text-gray-500 dark:text-gray-400 italic">Contact me by email</span>
        </div>

        <!-- Scroll indicator -->
        <ScrollIndicator class="!bottom-2 md:!bottom-16 lg:!bottom-24" />
      </div>
    </SectionContainer>

    <!-- Services section with improved design -->
    <SectionContainer
      id="services"
      class="py-20 md:py-28"
    >
      <div class="text-center mb-20">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 dark:text-white">My Expertise</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto leading-relaxed">What I bring to your development team with real production experience.</p>
      </div>

      <!-- Service Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        <!-- Web Development Card -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 group border border-gray-200 dark:border-gray-700">
          <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/50 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-blue-600 transition-colors duration-300">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-blue-600 dark:text-blue-400 group-hover:text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Full Stack Development</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed mb-4 flex-grow">I own the full stack: from database architecture and REST APIs with Laravel to reactive interfaces with Vue.js. You don't need to explain how the pieces fit — I've done it in production.</p>
          <div class="flex flex-wrap gap-2">
            <span class="bg-blue-50 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300 px-3 py-1 rounded-lg text-sm font-medium">PHP</span>
            <span class="bg-red-50 dark:bg-red-900/50 text-red-700 dark:text-red-300 px-3 py-1 rounded-lg text-sm font-medium">Laravel</span>
            <span class="bg-sky-50 dark:bg-sky-900/50 text-sky-700 dark:text-sky-300 px-3 py-1 rounded-lg text-sm font-medium">Astro</span>
          </div>
        </div>

        <!-- Backend Development Card -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 group border border-gray-200 dark:border-gray-700">
          <div class="w-16 h-16 bg-green-100 dark:bg-green-900/50 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-green-600 transition-colors duration-300">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-green-600 dark:text-green-400 group-hover:text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.40A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Solid Back-End</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed mb-4 flex-grow">
            Clean, testable, maintainable code. I build back-ends with PHP and Laravel that scale with your business: migrations, queues, caching, authentication, and APIs that other developers enjoy consuming.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="bg-blue-50 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300 px-3 py-1 rounded-lg text-sm font-medium">PHP</span>
            <span class="bg-red-50 dark:bg-red-900/50 text-red-700 dark:text-red-300 px-3 py-1 rounded-lg text-sm font-medium">Laravel</span>
            <span class="bg-cyan-50 dark:bg-cyan-900/50 text-cyan-700 dark:text-cyan-300 px-3 py-1 rounded-lg text-sm font-medium">MySQL</span>
          </div>
        </div>

        <!-- Frontend Development Card -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 group border border-gray-200 dark:border-gray-700">
          <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900/50 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-purple-600 transition-colors duration-300">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-purple-600 dark:text-purple-400 group-hover:text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Thoughtful Front-End</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed mb-4 flex-grow">Interfaces that don't just look good — they work well. Vue.js, modern JavaScript, and TailwindCSS for fast, accessible, and consistent user experiences on any device.</p>
          <div class="flex flex-wrap gap-2">
            <span class="bg-green-50 dark:bg-green-900/50 text-green-700 dark:text-green-300 px-3 py-1 rounded-lg text-sm font-medium flex items-center gap-1">
              <VueIcon class="w-4 h-4" />
              Vue.js
            </span>
            <span class="bg-yellow-50 dark:bg-yellow-900/50 text-yellow-700 dark:text-yellow-300 px-3 py-1 rounded-lg text-sm font-medium flex items-center gap-1">
              <JavascriptIcon class="w-4 h-4" />
              JavaScript
              <ThunderIcon class="w-3 h-3 text-yellow-500" />
            </span>
            <span class="bg-sky-50 dark:bg-sky-900/50 text-sky-700 dark:text-sky-300 px-3 py-1 rounded-lg text-sm font-medium flex items-center gap-1">
              <TailwindIcon class="w-4 h-4" />
              TailwindCSS
            </span>
          </div>
        </div>
      </div>

      <!-- Why Choose Me Section -->
      <div class="text-center mb-16">
        <h3 class="text-3xl font-bold mb-12 text-gray-900 dark:text-white">Why Choose Me?</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/50 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-10 w-10 text-blue-600 dark:text-blue-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <h4 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">Quality Code</h4>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed max-w-sm mx-auto">Clean, maintainable, and tested code following industry best practices.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 dark:bg-green-900/50 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-10 w-10 text-green-600 dark:text-green-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"
                ></path>
              </svg>
            </div>
            <h4 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">Performance</h4>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed max-w-sm mx-auto">Fast websites and applications, optimized for speed and a better user experience.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900/50 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-10 w-10 text-purple-600 dark:text-purple-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                ></path>
              </svg>
            </div>
            <h4 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">Innovation</h4>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed max-w-sm mx-auto">Using the latest technologies and frameworks to build scalable, secure, and future-proof solutions.</p>
          </div>
        </div>
      </div>

      <!-- Call to Action -->
      <div class="text-center">
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
          <a
            href="#projects"
            class="group relative px-10 py-5 text-lg font-bold text-white bg-gradient-to-r from-blue-600 to-indigo-700 rounded-2xl shadow-xl hover:from-blue-700 hover:to-indigo-800 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-blue-500/25"
          >
            View My Projects
          </a>
          <a
            href="#contact"
            class="group relative px-10 py-5 text-lg font-bold text-white bg-gradient-to-r from-indigo-600 to-purple-700 rounded-2xl shadow-xl hover:from-indigo-700 hover:to-purple-800 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-purple-500/25"
          >
            Contact Me
          </a>
        </div>
        <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Available for immediate start</p>
      </div>
    </SectionContainer>

    <SectionContainer
      id="expertise"
      class="py-20 md:py-28"
    >
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 dark:text-white">Technologies</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed">I master the most in-demand technologies in the market to create robust and scalable web solutions</p>
      </div>
      <SkillsCloud lang="en" />
    </SectionContainer>

    <FullSectionContainer
      id="brands"
      class="relative py-20 bg-gradient-to-r from-indigo-600 via-blue-600 to-purple-700 dark:from-indigo-800 dark:via-blue-800 dark:to-purple-900"
    >
      <div class="max-w-5xl mx-auto text-center">
        <h2 class="mb-4 text-4xl lg:text-5xl font-bold text-white">Brands that trusted my work</h2>
        <p class="text-xl text-blue-100 dark:text-blue-200 max-w-3xl mx-auto mb-12">I've built web applications, internal tools, and corporate sites for some of Spain's most recognized companies.</p>

        <div class="flex flex-wrap justify-center gap-x-8 gap-y-4 mb-12">
          <span class="text-white/90 text-lg md:text-xl font-semibold">PlayStation</span>
          <span class="text-white/60">|</span>
          <span class="text-white/90 text-lg md:text-xl font-semibold">TikTok</span>
          <span class="text-white/60">|</span>
          <span class="text-white/90 text-lg md:text-xl font-semibold">Glovo</span>
          <span class="text-white/60">|</span>
          <span class="text-white/90 text-lg md:text-xl font-semibold">LaCaixa</span>
          <span class="text-white/60">|</span>
          <span class="text-white/90 text-lg md:text-xl font-semibold">Bizum</span>
          <span class="text-white/60">|</span>
          <span class="text-white/90 text-lg md:text-xl font-semibold">Citroën</span>
          <span class="text-white/60">|</span>
          <span class="text-white/90 text-lg md:text-xl font-semibold">ElPozo</span>
          <span class="text-white/60">|</span>
          <span class="text-white/90 text-lg md:text-xl font-semibold">TacoBell</span>
          <span class="text-white/60">|</span>
          <span class="text-white/90 text-lg md:text-xl font-semibold">Ginos</span>
          <span class="text-white/60">|</span>
          <span class="text-white/90 text-lg md:text-xl font-semibold">Btravel</span>
        </div>

