<style>
  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  main {
    margin: auto;
    padding: 1rem;
    width: 1200px;
    max-width: calc(100% - 1rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }

  @keyframes pulse-white {
    0% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
    }

    70% {
      transform: scale(1);
      box-shadow: 0 0 0 10px rgba(255, 255, 255, 0);
    }

    100% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
    }
  }

  @keyframes pulse-cv {
    0% {
      box-shadow: 0 0 0 0 rgba(255, 220, 100, 0.7);
    }
    
    70% {
      box-shadow: 0 0 0 8px rgba(255, 220, 100, 0);
    }
    
    100% {
      box-shadow: 0 0 0 0 rgba(255, 220, 100, 0);
    }
  }

  .cv-button-wrapper a {
    background: linear-gradient(135deg, #ffdc64, #ff9a3d) !important;
    border: 2px solid rgba(255, 220, 100, 0.6) !important;
    font-weight: 600 !important;
    color: #000 !important;
    animation: pulse-cv 2.5s infinite;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }
  
  .cv-button-wrapper a:hover {
    transform: translateY(-3px);
    background: linear-gradient(135deg, #ffea94, #ffb06d) !important;
    box-shadow: 0 7px 14px rgba(255, 220, 100, 0.3);
  }
  
  .cv-button-wrapper a::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    z-index: -1;
    background: linear-gradient(90deg, #ffdc64, #ff9a3d, #ffdc64);
    background-size: 200% 100%;
    animation: gradientMove 3s linear infinite;
    opacity: 0.7;
    border-radius: 9999px;
  }
  
  @keyframes gradientMove {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Make the CV button stand out even more with a scale effect */
  .cv-button-wrapper {
    display: inline-block;
    transform: scale(1.05);
  }

  .blob-white {
    background: white;
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 1);
    animation: pulse-white 2s infinite;
  }

  .text-brush {
    background-image: linear-gradient(180deg, #fff06b, #fff06b);
    background-repeat: no-repeat;
    background-position: 10px bottom;
    background-size: 100% 10px;
    text-decoration: none;
  }

  .tooltip {
    @apply absolute bottom-full mb-2 hidden group-hover:block bg-slate-800 p-4 rounded-lg border border-purple-500/30;
    min-width: 220px;
    box-shadow: 0 10px 30px -10px rgba(109,40,217,0.3);
  }

  .sticky-nav {
    position: sticky;
    top: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 100;
  }

  .sticky .nav-link {
    position: relative;
    color: white;
    text-decoration: none;
    padding: 10px 20px;
  }

  .sticky .nav-underline {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: white;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .sticky .nav-link:hover .nav-underline {
    transform: scaleX(1);
  }
</style>

<nav class="sticky-nav" x-data="{ isOpen: false }">
  <div class="container">
    <a href="#expertise" class="nav-link group">
      Skills
      <span class="nav-underline"></span>
    </a>
    <!-- Repeat for other sections -->
  </div>
</nav>
